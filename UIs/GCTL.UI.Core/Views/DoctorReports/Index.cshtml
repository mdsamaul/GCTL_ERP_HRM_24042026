@model GCTL.UI.Core.ViewModels.Doctors.DoctorPageViewModel
@{
    ViewBag.Title = "Doctor Information Report";
    Model.PageTitle = ViewBag.Title;
    Model.Breadcrumb = "Doctor Info";
}

<!-- Content Header (Page header) -->
<section class="content-header" style="padding-bottom: 0;">
    <div class="container-fluid">
        <div class="calloutx callout-info" style="height: 35px;">
            <div class="row mb-2">
                <div class="col-md-8 row">
                    
                </div>
                <div class="col-md-4">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/Dashboard">Home</a></li>
                        <li class="breadcrumb-item active">Doctor Info</li>
                    </ol>
                </div>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header border-transparent">
                        <h3 class="card-title">@ViewBag.Title</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body p-2 pt-3">
                       <partial name="_Filter" model="Model.Filter" />
                        <div class="row no-print my-2">
                            <div class="col-12">
                                <div class="d-flex justify-content-end">
                                    <select class="form-control form-control-sm selectpicker export-format" style="width:200px !important"
                                            data-placeholder="Select Export Format">
                                        <option></option>
                                        <option value="PDF">PDF</option>
                                        <option value="Excel">Excel</option>
                                    </select>
                                    <button class="btn btn-default success-btn btn-common btn-circle js-export" type="button">
                                        <i class="fas fa-print">&nbsp;</i> Report Export
                                    </button>
                                </div>
                            </div>
                        </div>

                        <div class="js-doctor-grid-container">
                            <partial name="_Grid" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <partial name="_BottomNavigation" />
    </div>
</section>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="~/js/pages/doctorReports.js?v=1.0.1"></script>
    <script type="text/javascript">
        var options = {
            baseUrl: '@Url.Action("", "DoctorReports")'
        };
        options.load = () => {
        };

        $.doctorReports(options);
    </script>
}



