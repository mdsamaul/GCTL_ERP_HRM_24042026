@model List<GCTL.Core.ViewModels.Relationship.RelationshipSetupViewModel>


<table id="Relationships-grid" class="table table-striped  table-bordered table-sm table-hover table-common">
 
        <thead class="row-border">
            <tr class="table row-border">
                <th class="text-center text-middle" style="width: 10%;">
                    Select <br /> <input type="checkbox" id="Relationships-check-all" />
                </th>
                <th class="text-center text-middle" style="width: 10%;"> Id</th>
                <th class="text-center text-middle" style="width: 55%;"> Relationship</th>
                <th class="text-center text-middle" style="width: 25%;"> ShortName</th>

            </tr>
        </thead>
        <tbody>

            @if (Model == null || !Model.Any())
            {
                <tr class="text-center text-middle">
                    <td colspan="8">No Data Available In Table.</td>
                </tr>
            }
            else
            {
                @foreach (var item in Model.OrderByDescending(x => x.RelationshipCode))
                {
                    <tr>
                        <td class="text-center">
                            <input type="checkbox" class="text-center text-middle checkBox" data-id="@item.RelationshipCode" value="@item.RelationshipCode" />
                        </td>
                        <td>
                            <a href="#" class='btn js-Relationships-edit'
                               style="text-decoration: underline; color: rebeccapurple;"
                               data-id="@item.RelationshipCode" title="Edit">
                                @item.RelationshipCode
                            </a>
                        </td>

                        <td class="text-center text-middle">@item.Relationship</td>

                        <td class="text-center text-middle">@item.ShortName</td>

                    </tr>
                }
            }


        </tbody>
    </table>

