@model ToobarModel
<style>
    .dropdown-menu .dropdown-item {
        cursor: pointer;
        color: #000;
        transition: color 0.3s ease;
    }

        .dropdown-menu .dropdown-item:hover {
            color: #007bff;
            background-color: #f0f8ff;
        }
</style>
<div class="row">
    <div class="col-md-5">
        <h6 class="page-title">@Model.Title</h6>
    </div>
    <div class="col-md-7">
        <div class="btn-toolbar d-flex justify-content-end">
            <div class="btn-group">
                <button type="button" class="btn btn-default success-btn btn  js-hRMATDShifts-save">
                    <i class="fa fa-save">&nbsp;</i> Save
                </button>
                <button type="button" class="btn btn-default danger-btn js-hRMATDShifts-delete-confirm">
                    <i class="fa fa-trash">&nbsp;</i>
                    Delete
                </button>
                <button type="button" class="btn btn-default primary-btn js-hRMATDShifts-clear">
                    <i class="fas fa-sync">&nbsp;</i>
                    Clear
                </button>
                @* <button type="button" id="exportExcel" class="btn btn-light btn-sm"><i class="fas fa-print"></i> Print</button> *@
                <button class="btn btn-light btn-sm dropdown-toggle" type="button" id="dropdownMenu1" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-print"></i> Print
                </button>
                <div class="dropdown">                   
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                        <li><a class="dropdown-item" id="downloadShiftPdf"><i class="bi bi-file-earmark-pdf-fill"></i>PDF</a></li>
                        <li><a class="dropdown-item" id="downloadShiftExcel"><i class="bi bi-file-earmark-excel-fill"></i>Excel</a></li>
                    </ul>
                </div>

            </div>
        </div>
    </div>
</div>

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- Bootstrap Bundle JS (includes Popper) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">