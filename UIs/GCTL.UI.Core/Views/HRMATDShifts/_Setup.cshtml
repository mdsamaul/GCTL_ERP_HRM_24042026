        border-radius: 8px 8px 0 0;
    }

    .form-label {
        font-weight: 500;
        margin-bottom: 0.5rem;
    }

    .required::after {
        content: "*";
        color: red;
        margin-left: 3px;
    }

    .time-section {
        padding: 0;
        background-color: #f8f9fa;
        border-radius: 5px;
        width: 100%;
    }

