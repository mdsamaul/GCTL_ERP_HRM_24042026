@model GCTL.Core.ViewModels.Relation.RelationSetupViewModel

<div style="padding-top: 10px;">
    <div class="row">
        <div class="col-lg-6">
            <span id="message"></span>
        </div>
        <div class="col-lg-6">
        </div>
    </div>
    <div class="form-group row">
        <input type="hidden" id="lastCode" />
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Ldate" />
        <input type="hidden" asp-for="ModifyDate" />
        <div class="col-lg-6">
            <label asp-for="RelationCode">Relation Code</label>
            <div class="input-group input-group-sm">
                <input asp-for="RelationCode" class="form-control form-control-sm js-relation-code" readonly="readonly" />
            </div>
        </div>
        <div class="col-lg-6">
            <label asp-for="Relation">Relation</label>
            <span class="text-danger">*</span>
            <input asp-for="Relation" class="form-control form-control-sm js-relation" placeholder="Enter Relation" />
            <span asp-validation-for="Relation" class="text-danger" />
        </div>
    </div>
    



    @if (Model.Id > 0)
    {
        <hr />
        <div class="form-group row">
            <div class="col-lg-6">
                @if (Model.Ldate.HasValue)
                {
                    <label>Creation Date: </label>
                    <label>@Model.Ldate.Value.ToString(ApplicationConstants.DateFormat)</label>
                }
            </div>
            <div class="col-lg-6">
                @if (Model.ModifyDate.HasValue)
                {
                    <label>Last Update Date: </label>
                    <label>@Model.ModifyDate.Value.ToString(ApplicationConstants.DateFormat)</label>
                }
            </div>
        </div>
    }
</div>
<div class="row no-print" style="margin-top: 9px;">
    <div class="col-12">
        <button type="button" class="btn btn-default success-btn btn-common btn-circle float-right js-relation-save" data-id="@Model.RelationCode">
            <i class="fas fa-save"></i> Save
        </button>
    </div>
</div>