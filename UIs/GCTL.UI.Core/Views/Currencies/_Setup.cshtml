@model GCTL.Core.ViewModels.Currencies.CurrencySetupViewModel
<div style="padding-top: 10px;">
    <div class="row">
        <div class="col-lg-6">
            <span id="message"></span>
        </div>
        <div class="col-lg-6">
        </div>
    </div>
    <div class="form-group row">
        <input type="hidden" asp-for="Tc" />
        <input type="hidden" asp-for="Ldate" />
        <input type="hidden" asp-for="ModifyDate" />
        <div class="col-lg-6">
            <label asp-for="CurrencyId">Currency Id</label>
            <div class="input-group input-group-sm">
                <input asp-for="CurrencyId" class="form-control form-control-sm js-code" readonly="readonly" />
            </div>
        </div>       
    </div>
    <div class="form-group row">
        <div class="col-lg-6">
            <label asp-for="CurrencyName">Currency Name</label>
            <span class="text-danger">*</span>
            <input asp-for="CurrencyName" class="form-control form-control-sm js-currency-check-availability" placeholder="Enter Currency Name" />
            <span asp-validation-for="CurrencyName" class="text-danger" />
        </div>
        <div class="col-lg-6">
            <label asp-for="ShortName">Short Name</label>
            <input asp-for="ShortName" class="form-control form-control-sm" placeholder="Enter Short Name" />
            <span asp-validation-for="ShortName" class="text-danger" />
        </div>            
    </div>
    <div class="form-group row">
        <div class="col-lg-6">
            <label asp-for="Symbol"></label>
            <input asp-for="Symbol" class="form-control form-control-sm symbol" placeholder="Enter Symbol" />
            <span asp-validation-for="Symbol" class="text-danger" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-lg-6">
            <label asp-for="DecimalPlaces">Decimal Places (0-3)</label>
            <div class="input-group">
                <input asp-for="DecimalPlaces" class="form-control form-control-sm js-currency-decimalplaces" placeholder="Enter Decimal Places" />
                <div class="input-group-prepend input-group-prepend-sm">
                    <span class="input-group-text"></span>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <label asp-for="NegativeFormat">Negative Format</label>
            <select asp-for="NegativeFormat" class="form-control form-control-sm negative-format"></select>
        </div>
    </div>
    @if (Model.Tc > 0)
    {
        <hr />
        <div class="form-group row">
            <div class="col-lg-6">
                @if (Model.Ldate.HasValue)
                {
                    <label>Creation Date: </label>
                    <label>@Model.Ldate.Value.ToString(ApplicationConstants.DateFormat)</label>
                }
            </div>
            <div class="col-lg-6">
                @if (Model.ModifyDate.HasValue)
                {
                    <label>Last Update Date: </label>
                    <label>@Model.ModifyDate.Value.ToString(ApplicationConstants.DateFormat)</label>
                }
            </div>
        </div>
    }
</div>
<div class="row no-print" style="margin-top: 9px;">
    <div class="col-12">
        <button type="button" class="btn btn-default success-btn btn-common btn-circle float-right js-currency-save" data-id="@Model.CurrencyId">
            <i class="fas fa-save"></i> Save
        </button>
    </div>
</div>