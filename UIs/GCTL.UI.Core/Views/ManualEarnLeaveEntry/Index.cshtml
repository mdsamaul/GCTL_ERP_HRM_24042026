<style>
    .swal2-toast {
        min-height: 40px !important;
        padding: 0px 12px !important; 
        font-size: 14px !important;
        width: auto !important;
    }

        .swal2-toast .swal2-title {
            font-size: 14px !important;
            text-align: left !important;           
          padding-top:10px !important;
        }

        .swal2-toast .swal2-icon {
            width: 20px !important;
            height: 30px !important;
            margin: 0 5px 0 0 !important;
        }

    .swal2-timer-progress-bar {
        background: #FF5722 !important;
    }


    .sticky-scrolled {
        background-color: #fff !important;
        transition: background-color 0.3s ease-in-out;
        opacity: 95%;
    }

    .page-item.active .page-link {
        z-index: 3 !important;
        color: #000000 !important;
        background-color: #ffffff !important;
        border-color: #007bff !important;
    }

    /* Dropdown layout container */
    .dropdown-wrapper .col-auto {
        padding: 0 6px !important;
        margin-bottom: 10px;
        flex: 0 0 auto;
        min-width: 10vw;
    }

    /* Dropdown box styling */
    .dropdown-wrapper .form-group {
        margin: 0;
        width: 10vw;
        background: #f8f9fa;
        padding: 10px;
        border-radius: 6px;
        box-shadow: 0 1px 2px rgba(0,0,0,0.05);
        border: 1px solid #dee2e6;
        transition: all 0.2s ease-in-out;
    }

        .dropdown-wrapper .form-group:hover {
            background: #e9ecef;
            box-shadow: 0 2px 6px rgba(0,0,0,0.08);
        }

    /* Label */
    .dropdown-wrapper label {
        font-size: 12px;
        font-weight: 600;
        color: #495057;
        margin-bottom: 6px;
        display: block;
    }

    /* Multiselect button */
    .dropdown-wrapper .btn-group {
        width: 100% !important;
        display: block !important;
    }

    /* Multiselect input */
    .dropdown-wrapper .multiselect {
        width: 100% !important;
        border: 1px solid #ced4da !important;
        border-radius: 4px !important;
        background-color: #fff !important;
        padding: 4px 8px !important;
        font-size: 13px !important;
        height: auto !important;
        display: flex !important;
        align-items: center !important;
        justify-content: space-between !important;
        box-shadow: none !important;
        cursor: pointer !important;
        transition: all 0.2s ease-in-out !important;
    }

        .dropdown-wrapper .multiselect:hover {
            border-color: #007bff !important;
            box-shadow: 0 2px 6px rgba(0,123,255,0.15) !important;
            transform: translateY(-1px) !important;
        }

        .dropdown-wrapper .multiselect:focus,
        .dropdown-wrapper .multiselect.active {
            box-shadow: 0 0 0 3px rgba(0,123,255,0.1) !important;
            border-color: #007bff !important;
            outline: none !important;
            transform: translateY(-1px) !important;
        }

        /* Caret icon */
        .dropdown-wrapper .multiselect::after {
            content: "▼";
            font-size: 12px;
            color: #6c757d;
            margin-left: auto;
            transition: all 0.2s ease-in-out;
        }

        .dropdown-wrapper .multiselect.active::after,
        .dropdown-wrapper .multiselect:hover::after {
            color: #007bff;
            transform: rotate(180deg);
        }

    /* Dropdown container */
    .dropdown-wrapper .multiselect-container {
        width: auto !important;
        position: absolute !important;
        z-index: 1000 !important;
    }

    /* Dropdown menu */
    .multiselect-container.dropdown-menu {
        width: auto !important;
        border-radius: 4px !important;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        font-size: 13px;
        margin-top: 0 !important;
    }

    /* Filter section fix */
    .multiselect-container .multiselect-filter {
        display: flex !important;
        align-items: center !important;
        padding: 4px 8px !important;
        gap: 6px;
    }

        .multiselect-container .multiselect-filter i {
            font-size: 14px;
            color: #6c757d;
        }

        .multiselect-container .multiselect-filter input {
            width: 100% !important;
            padding: 4px 8px !important;
            font-size: 12px !important;
            border-radius: 4px;
            border: 1px solid #ced4da;
            height: 32px !important;
            line-height: 1.5 !important;
        }

    /* Regular select dropdown */
    .dropdown-wrapper .regular-select {
        width: 100% !important;
        border-radius: 4px !important;
        border: 1px solid #ced4da !important;
        background: #fff !important;
        padding: 6px 8px !important;
        font-size: 13px !important;
        height: 30px !important;
        appearance: none;
        background-image: url("data:image/svg+xml;charset=US-ASCII,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 4 5'><path fill='%23666' d='m2 0-2 2h4zm0 5 2-2h-4z'/></svg>");
        background-repeat: no-repeat;
        background-position: right 12px center;
        background-size: 12px;
        padding-right: 36px !important;
    }

        .dropdown-wrapper .regular-select:hover {
            border-color: #007bff !important;
            box-shadow: 0 2px 6px rgba(0,123,255,0.15) !important;
            transform: translateY(-1px) !important;
        }

        .dropdown-wrapper .regular-select:focus {
            box-shadow: 0 0 0 3px rgba(0,123,255,0.1) !important;
            border-color: #007bff !important;
            outline: none !important;
            transform: translateY(-1px) !important;
        }

    /* Prevent selection */
    .dropdown-wrapper .multiselect * {
        user-select: none !important;
    }

    .multiselect-search{
        text-align:center !important;
    }
    /* Responsive */
    @@media (max-width: 768px) {
        .dropdown-wrapper .form-group

    {
        width: 100% !important;
    }

    .dropdown-wrapper label {
        font-size: 11px;
    }

    .dropdown-wrapper .multiselect,
    .dropdown-wrapper .regular-select {
        font-size: 12px !important;
        padding: 6px 8px !important;
        height: 25px !important;
    }

    }
</style>

