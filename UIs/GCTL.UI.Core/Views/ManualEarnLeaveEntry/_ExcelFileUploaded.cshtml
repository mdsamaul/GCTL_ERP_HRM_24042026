<div class="container-fluid my-3">
    <div class="rounded-3 shadow-sm">
        <div class="card-header py-2">
            <h6 class="mb-0">Excel File Upload Option:</h6>
        </div>
        <div id="massageShow" class="alert-default-success" style="display: none; color: red; font-weight: bold;"></div>
       
        <div class="p-3">
            <div class="row g-2 align-items-center">
                <div class="col-md-6">
                    <label for="ExcelFileDownload" class="form-label small fw-semibold"> Excel File Format</label>
                    <a href="/ManualEarnLeaveEntry/DownloadExcel" class="btn btn-light border shadow-sm"><i class="bi bi-download fa-bold"></i><span style="padding-left:10px;">Download Excel</span></a>
                </div>
                <div class="col-md-6">
                  
                    <form id="excelUploadForm" enctype="multipart/form-data" method="post">
                        <div class="d-flex justify-content-start align-items-center gap-2">
                            <label for="excelFile" class="form-label text-center">📂 Upload Excel File</label>
                            <div class="mx-2">
                                <div class="custom-file-upload btn btn-outline-light border shadow-sm w-100 text-center position-relative overflow-hidden" style="color:#000">
                                    <i class="bi bi-folder2-open"></i> <span id="choosefileText" style="color:#000">Choose File</span>
                                  
                                    <input type="file" id="excelFileInput" name="excelFile" accept=".xlsx,.xls" required
                                           style="position: absolute; left: 0; top: 0; opacity: 0; width: 100%; height: 100%; cursor: pointer;">
                                </div>
                              
                            </div>
                            <div>
                                <button type="submit" class="btn btn-light border shadow-sm" style="height: 35px;">
                                    <i class="bi bi-upload me-1"></i> Upload
                                </button>
                            </div>
                        </div>
                    </form>
                    <div id="checkExcelFileFormate" style="display: none; color: red; font-weight: bold;" class="form-text text-center fs-6">Only .xlsx or .xls files are allowed</div>
                </div>
            </div>
        </div>
    </div>
</div>


<style>
    .custom-file-upload {
        position: relative;
        overflow: hidden;
        display: inline-block;
    }

        .custom-file-upload input[type="file"] {
            position: absolute;
            left: 0;
            top: 0;
            opacity: 0;
            cursor: pointer;
            height: 100%;
            width: 100%;
        }

    .file-name-display {
        display: block;
        margin-top: 0.5rem;
        font-size: 0.9rem;
        color: #555;
    }
    .card-header h6 {
        font-size: 1rem;
    }

    .form-label.small {
        font-size: 0.8rem;
    }

    .btn-sm {
        font-size: 0.8rem;
        padding: 0.25rem 0.5rem;
    }

    .bi {
        font-size: 0.8rem;
    }

    .progress {
        font-size: 0.6rem;
    }
</style>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
