<style>
	.label-right {
		text-align: right;
		width: 150px; /* Adjust the width to match the longest label text */
		white-space: nowrap; /* Ensures the label text doesn't wrap to the next line */
	}
</style>
<hr />
<div class="row g-3 mt-4">
	<input type="hidden" id="hiddenEarnId" value="" />
	<input type="hidden" id="autoIdDelete" value="" />
	<!-- Year. Type -->
	<div class="col-md-6 mt-2">
		<div class="d-flex align-items-center">
			<label for="yearpicker" class="col-md-3 mb-0 label-right">Year<sup class="text-danger"><span style="font-size:20px;">*</span></sup></label>
			<input type="text" id="yearpicker" class="form-control text-center col-md-5" placeholder="Click to choose year">
		</div>
	</div>

	<div class="col-md-6"></div>

	<!-- day -->
	<div class="col-md-6 mt-2">
		<div class="d-flex align-items-center">
			<label for="grantedLeavDay" class="col-md-3 mb-0 label-right">Granted Leave Day(s)<sup class="text-danger"><span style="font-size:20px;">*</span></sup></label>
			<input type="number" id="grantedLeavDay" class="form-control col-md-5 cursor-pointer" placeholder="Granted Leave Day" />
		</div>
	</div>

	<!-- day -->

	<div class="col-md-6 me-3">
		<div class="d-flex align-items-center">
			<div class="col-md-3 text-md-right">
				<label for="availedLeaveDay" class="mb-0">Availed Leave Day(s)</label>
			</div>
			<div class="col-md-6">			
					<input type="number" id="availedLeaveDay" class="form-control col-md-12" placeholder="Availed Leave Day" />
			</div>
			<div class="col-md-8"></div>
		</div>
		<div id="checkFileFormate" style="display: none; color: red; font-weight: bold;" class="form-text text-center ms-3 fs-6 row w-100">
			You can't enter Availed leave more than Granted leave.
		</div>
	</div>


	<!-- day -->
	<div class="col-md-6 mt-2">
		<div class="d-flex align-items-center">
			<label for="balancedLeaveDay" class="col-md-3 mb-0 label-right d-flex justify-content-end">Balanced Leave Day(s)</label>
			<input type="number" id="balancedLeaveDay" class="form-control col-md-5" placeholder="0" readonly />
		</div>
	</div>

	<div class="col-md-6"></div>

	<!-- Remarks (full-width input aligned with others) -->
	<div class="col-md-9 mt-2">
		<div class="d-flex align-items-center">
			<label for="remarks" class="col-md-2 mb-0 label-right">Remarks</label>
			<textarea id="remarks" class="form-control col-md-8" placeholder="Remarks"></textarea>
		</div>
	</div>
</div>
