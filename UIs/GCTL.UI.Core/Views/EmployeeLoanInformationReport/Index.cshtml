<style>
    .multiselect-container {
        position: relative;
        width: 100%;
    }

    .multiselect-input {
        cursor: pointer;
        background-color: white;
        border: 1px solid #ced4da;
        border-radius: 0.375rem;
        position: relative;
        padding:5px;
    }

        .multiselect-input:focus {
            border-color: #86b7fe;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        }

    .multiselect-arrow {
        position: absolute;
        right: 10px;
        top: 50%;
        transform: translateY(-50%);
        pointer-events: none;
        transition: transform 0.2s;
    }

        .multiselect-arrow.open {
            transform: translateY(-50%) rotate(180deg);
        }

    .multiselect-dropdown {
        position: absolute;
        top: 100%;
        left: 0;
        right: 0;
        background: white;
        border: 1px solid #ced4da;
        border-top: none;
        border-radius: 0 0 0.375rem 0.375rem;
        max-height: 250px;
        overflow-y: auto;
        z-index: 1000;
        display: none;
    }

    .multiselect-search {
        /* padding: 4px; */
        border-bottom: 1px solid #e9ecef;
    }

        .multiselect-search input {
            width: 100%;
            border: 1px solid #ced4da;
            border-radius: 0.25rem;
            padding: 6px 10px;
            font-size: 14px;
        }

    .multiselect-options {
        max-height: 180px;
        overflow-y: auto;
    }

    .multiselect-option {
        padding: 8px 12px;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 14px;
    }

        .multiselect-option:hover {
            background-color: #f8f9fa;
        }

        .multiselect-option input[type="checkbox"] {
            margin: 0;
        }

    .selected-items {
        display: flex;
        flex-wrap: wrap;
        gap: 4px;
    }

    .selected-item {
        border: 1px solid #ccc;
        padding: 4px 8px;
        width: 100%;
        border-radius: 0;
        background-color: #f5f5f5;
        font-size: 14px;
    }

        .selected-item .remove {
            cursor: pointer;
            font-weight: bold;
            color: #666;
        }

            .selected-item .remove:hover {
                color: #000;
            }

    .placeholder-text {
        color: #6c757d;
        font-size: 14px;
        /* padding: 5px; */
    }

    .count-display {
        color: #495057;
        font-size: 14px;
        font-weight: 500;
        padding: 4px 8px;
        border: 1px solid #eee;
    }

    @@media (min-width: 1400px) {
        .SearchAndReportOption {
            margin-left: 5vw;
            font-weight: bold;
        }
    }

    #btnPreview, #downloadReport {
        transition: background-color 0.3s ease, color 0.3s ease, border-color 0.3s ease;
        min-width: 120px;
        min-height: 25px;
        position: relative;
        overflow: visible;
    }

        #btnPreview:hover,
        #downloadReport:hover {
            background-color: rgba(173, 255, 47, 0.2) !important;
            color: #1e90ff !important;
            border-color: #1e90ff !important;
            box-shadow: 0 4px 10px rgba(30, 144, 255, 0.5) !important;
        }


        #btnPreview i,
        #btnPreview span,
        #downloadReport i,
        #downloadReport span {
            transition: transform 0.3s ease;
            display: inline-block;
            transform: scale(1);
            margin-right: 2px;
        }

        #btnPreview:hover i,
        #downloadReport:hover i {
            transform: scale(1.3);
        }

    .multiselect-input {
        position: relative;
    }

    .multiselect-arrow {
        position: absolute;
        right: 10px;
        top: 50%;
        transform: translateY(-50%);
        transition: transform 0.3s ease;
        pointer-events: none; /* so it doesn't interfere with click */
        color: #555;
    }

        .multiselect-arrow.rotate {
            transform: translateY(-50%) rotate(180deg);
        }


</style>
