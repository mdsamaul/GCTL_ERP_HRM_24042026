@model List<GCTL.Core.ViewModels.HrmDefOccupations.HrmDefOccupationsSetupViewModel>

<table id="HrmDefOccupations-grid" class="table table-striped  table-bordered table-sm table-hover table-common">

    <thead class="row-border">
        <tr class="table row-border">
            <th class="text-center text-middle">
                Select <br /> <input type="checkbox" id="HrmDefOccupations-check-all" />
            </th>
            <th class="text-center text-middle"> Id</th>
            <th class="text-center text-middle"> Occupation</th>
            <th class="text-center text-middle">Short Name</th>

        </tr>
    </thead>
    <tbody>

        @if (Model == null || !Model.Any())
        {
            <tr class="text-center text-middle">
                <td colspan="8">No  Data Available.</td>
            </tr>
        }
        else
        {
            @foreach (var item in Model.OrderByDescending(x => x.OccupationCode))
            {
                <tr>
                    <td class="text-center">
                        <input type="checkbox" class="text-center text-middle checkBox" data-id="@item.OccupationCode" value="@item.OccupationCode" />
                    </td>
                    <td>
                        <a href="#" class='btn js-HrmDefOccupations-edit'
                           style="text-decoration: underline; color: rebeccapurple;"
                           data-id="@item.OccupationCode" title="Edit">
                            @item.OccupationCode
                        </a>
                    </td>

                    <td class="text-center text-middle">@item.Occupation</td>
                    <td class="text-center text-middle">@item.ShortName</td>

                </tr>
            }
        }


    </tbody>
</table>
