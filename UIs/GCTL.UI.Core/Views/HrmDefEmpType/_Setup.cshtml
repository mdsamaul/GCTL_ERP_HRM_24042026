@model GCTL.Core.ViewModels.HrmDefEmpTypes.HrmDefEmpTypeSetupViewModel

<div style="padding-top: 10px;padding-left:15px;">
    <div class="row">
        <div class="col-lg-6">
            <span id="message"></span>
        </div>
        <div class="col-lg-6">
        </div>
    </div>
    <div class="form-group row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input type="hidden" id="lastCode" />
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Ldate" />
        <input type="hidden" asp-for="ModifyDate" />
        <input type="hidden" asp-for="AutoId" />

    </div>

    <div class="form-group row">
        <div class="col-lg-6">
            <label asp-for="EmpTypeCode"> Employee Type Id </label>
            <input asp-for="EmpTypeCode" type="text" class="form-control form-control-sm js-EmpTypeCode-code" readonly="readonly" />
        </div>
        <div class="col-lg-6">
            <label asp-for="EmpTypeName"> Employee Type  <span style="color:red;">*</span></label>

            <input type="text" placeholder="Enter Employee Type " asp-for="EmpTypeName" class="form-control form-control-sm  js-HrmDefEmpType-check-availability" autofocus required tabindex="1" />

        </div>
    </div>


    <div class="form-group row">
        <div class="col-lg-6">
            <label asp-for="EmpTypeShortName">Short Name </label>

            <input type="text" class="form-control form-control-sm" placeholder="Enter  Short Name" asp-for="EmpTypeShortName" tabindex="2" />

            <span asp-validation-for="EmpTypeShortName" class="text-danger"></span>

        </div>

        <div class="col-lg-6">
            <label asp-for="BanglaEmployeeType">Employee Type(বাংলা) </label>

            <input type="text" class="form-control form-control-sm"  placeholder="Enter  Employee Type" asp-for="BanglaEmployeeType" tabindex="2"
             onpaste="validatePasteBangla(event)"
             oninput="validateBanglaInput(this)" />

            <span asp-validation-for="BanglaEmployeeType" class="text-danger"></span>

        </div>

    </div>



    @if (Model.AutoId > 0)
    {
        <hr />

        <div class="form-group row" id="LdateModifyHide">

            <div class="col-lg-6">
                @if (Model.Ldate.HasValue)
                {
                    <label>Creation Date: </label>

                    <label>@Model.Ldate?.ToString("dd/MM/yyyy")</label>
                }
            </div>
            <div class="col-lg-6">
                @if (Model.ModifyDate.HasValue)
                {
                    <label>Last Update Date: </label>

                    <label>@Model.ModifyDate?.ToString("dd/MM/yyyy")</label>
                }
            </div>
        </div>
    }

</div>
<div class="row no-print" style="margin-top: 9px;">
    <div class="col-12">
        <button type="button" class="btn btn-default success-btn btn btn-outline-success btn-common btn-circle float-right js-HrmDefEmpType-save" data-id="@Model.EmpTypeCode">
            <i class="fas fa-save"></i> Save
        </button>
    </div>
</div>

<script>
    function validateBanglaInput(input) {
       
        const banglaRegex = /^[\u0980-\u09FF\s]*$/;

        if (!banglaRegex.test(input.value)) 
        {
          
            input.value = input.value.slice(0, -1);
        }
    }

    function validatePasteBangla(event) 
    {
        
        const pastedText = (event.clipboardData || window.clipboardData).getData('text');

       
        const banglaRegex = /^[\u0980-\u09FF\s]*$/;

        // If the pasted text contains non-Bangla characters, prevent the paste
        if (!banglaRegex.test(pastedText)) 
        {
            event.preventDefault();
            //("Please paste only Bangla text.");
        }
    }
</script>
