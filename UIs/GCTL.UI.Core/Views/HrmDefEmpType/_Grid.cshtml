@model List<GCTL.Core.ViewModels.HrmDefEmpTypes.HrmDefEmpTypeSetupViewModel>

<table id="HrmDefEmpType-grid" class="table table-striped  table-bordered table-sm table-hover table-common">
    <thead class="row-border">
        <tr class="table row-border">
            <th class="text-center text-middle">
                Select <br /> <input type="checkbox" id="HrmDefEmpType-check-all" />
            </th>
            <th class="text-center text-middle"> ID</th>
            <th class="text-center text-middle">Employee Type </th>
            <th class="text-center text-middle">Short Name</th>
            <th class="text-center text-middle">Bangla Name</th>
        </tr>
    </thead>
    <tbody>
        @if (Model == null || !Model.Any())
        {
            <tr class="text-center text-middle">
                <td colspan="5">No  Employee Type   Available.</td>
            </tr>
        }
        else
        {
            @foreach (var item in Model.OrderByDescending(x => x.EmpTypeCode))
            {
                <tr>
                    <td class="text-center">
                        <input type="checkbox" class="text-center text-middle checkBox" data-id="@item.EmpTypeCode" value="@item.EmpTypeCode" />
                    </td>
                    <td>
                        <a href="#" class='btn js-HrmDefEmpType-edit'
                           style="text-decoration: underline; color: rebeccapurple;"
                           data-id="@item.EmpTypeCode" title="Edit">
                            @item.EmpTypeCode
                        </a>
                    </td>
                    <td class="text-center text-middle">@item.EmpTypeName</td>
                    <td class="text-center text-middle">@item.EmpTypeShortName</td>
                    <td class="text-center text-middle">@item.BanglaEmployeeType</td>

                </tr>
            }
        }
    </tbody>
</table>