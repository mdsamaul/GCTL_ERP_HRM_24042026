    padding: 0.5rem 1rem;
    color: #6c757d;
    font-style: italic;
    }

    .search-icon {
    position: absolute;
    right: 30px;
    top: 50%;
    transform: translateY(-50%);
    color: #6c757d;
    pointer-events: none;
    }

    .dropdown-arrow {
    position: absolute;
    right: 10px;
    top: 50%;
    transform: translateY(-50%);
    transition: transform 0.3s;
    }

    .dropdown-arrow.rotated {
    transform: translateY(-50%) rotate(180deg);
    }

     .searchable-dropdown {
         position: relative;
     }

         .searchable-dropdown.active {
             z-index: 1051; 
         }

     .dropdown-menu {
         width: 100%;
         max-height: 150px;
         overflow-y: auto;
         z-index: 1052; 
