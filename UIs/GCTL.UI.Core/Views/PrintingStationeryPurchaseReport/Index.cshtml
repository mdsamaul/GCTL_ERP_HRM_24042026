         #downloadReport i,
         #downloadReport span {
             transition: transform 0.3s ease;
             display: inline-block;
             transform: scale(1);
             margin-right: 2px;
         }

         #btnPreviewPdf:hover i,
         #downloadReport:hover i {
             transform: scale(1.3);
         }
