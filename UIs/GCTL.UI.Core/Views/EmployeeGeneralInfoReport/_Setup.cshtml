 @model GCTL.Core.ViewModels.EmployeeGeneralInfoReport.EmployeeGeneralInfoReportSetupViewModel


<style>

    .button-container {
        display: flex;
        gap: 10px;
        justify-content: flex-end;
    }

    .accent-light, .btn-close-white {
        flex: 1;
        max-width: 150px;
    }

</style>

<div id="loadingIndicator" style="display: none; position: fixed; top: 50%; left: 50%; transform: translate(-80%, -80%); z-index: 9999;">
    <img src="/images/Spinner.gif" alt="Loading..." style="width: 80px; height: 80px;" />
</div>

<div class="row">
    <div class="col-md-6 ms-5">
        <div class="row">
            <div class="col-sm-4 text-end" style="text-align: right;">
                <div class="form-group">
                    <label asp-for="CompanyName" class="col-form-label-sm">Company</label>
                </div>
            </div>

            <div class="col-sm-6">
                <div class="form-group shefu-multi-select-dropdown">
                    <select asp-for="CompanyCode" class="form-control  form-control-sm multiselectCustom" title="---- Select Company ----" multiple asp-items="@ViewBag.CoreCompanyDD as SelectList">
                    </select>
                </div>
            </div>



        </div>



        <div class="row">
            <div class="col-sm-4 text-end" style="text-align: right;">
                <div class="form-group">
                    <label asp-for="DepartmentName" class="col-form-label-sm">Department</label>
                </div>
            </div>

            <div class="col-sm-6">
                <div class="form-group shefu-multi-select-dropdown">
                    <select asp-for="DepartmentName" multiple class="form-control form-control-sm multiselectCustom" title="---- Select Department ----" asp-items="@ViewBag.DeptDD as SelectList">
                    </select>
                </div>
            </div>
        </div>



        <div class="row">
            <div class="col-sm-4 text-end" style="text-align: right;">
                <div class="form-group">
                    <label asp-for="EmployeeName" class="col-form-label-sm">Employee Name</label>
                </div>
            </div>

            <div class="col-sm-6">
                <div class="form-group shefu-multi-select-dropdown">
                    <select asp-for="EmployeeCode" multiple class="form-control form-control-sm multiselectCustom" title="---- Select Employee----" asp-items="@ViewBag.EmpDD as SelectList">
                    </select>
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-sm-4 text-end" style="text-align: right;">
                <div class="form-group">
                    <label asp-for="Gender" class="col-form-label-sm">Gender</label>
                </div>
            </div>

            <div class="col-sm-6">
                <div class="form-group shefu-multi-select-dropdown">
                    <select asp-for="GenderCode"  class="form-control form-control-sm multiselectCustom" title="---- Select Gender----" asp-items="@ViewBag.GenderCodeDD as SelectList">
                    </select>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-4 text-end" style="text-align: right;">
                <div class="form-group">
                    <label asp-for="BloodGroup" class="col-form-label-sm">Blood Group</label>
                </div>
            </div>

            <div class="col-sm-6">
                <div class="form-group shefu-multi-select-dropdown">
                    <select asp-for="BloodGroupCode"  class="form-control form-control-sm multiselectCustom" title="---- Select Gender----" asp-items="@ViewBag.BloodGroupCodeDD as SelectList">
                    </select>
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-sm-4 text-end" style="text-align: right;">
                <div class="form-group">
                    <label class="col-form-label-sm">Report Export Format</label>
                </div>
            </div>

            <div class="col-sm-6">
                <div class="form-group">
                    <select id="exportFormatDropdown" asp-for="ExportPdfXL" class="form-control form-control-sm exportFormatDropdownclass selectpickerReport" asp-items="@ViewBag.CompanyDD as SelectList">
                        <option value="">----Select Report Export Format----</option>
                        <option value="Excel">Excel</option>
                        <option value="PDF">PDF</option>
                    </select>
                </div>
            </div>



        </div>
    </div>

    <div class="col-md-6">

        <div class="row">
            <div class="col-sm-4 text-end" style="text-align: right;">
                <div class="form-group">
                    <label asp-for="ComapnyBranchName" class="col-form-label-sm">Branch</label>
                </div>
            </div>

            <div class="col-sm-6">
                <div class="form-group shefu-multi-select-dropdown">
                    <select asp-for="BranchCode" multiple class="form-control form-control-sm multiselectCustom" title="----Select Branch----" asp-items="@ViewBag.CoreBranchDD as SelectList">
                    </select>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-4 text-end" style="text-align: right;">
                <div class="form-group">
                    <label asp-for="Designation" class="col-form-label-sm">Designation</label>
                </div>
            </div>

            <div class="col-sm-6">
                <div class="form-group shefu-multi-select-dropdown">
                    <select asp-for="DesignationCode" multiple class="form-control form-control-sm multiselectCustom" title="----Select Designation----" asp-items="@ViewBag.DesigDD as SelectList">
                    </select>
                </div>
            </div>
        </div>



        <div class="row">
            <div class="col-sm-4 text-end" style="text-align: right;">
                <div class="form-group">
                    <label asp-for="Nationality" class="col-form-label-sm">Nationality</label>
                </div>
            </div>

            <div class="col-sm-6">
                <div class="form-group shefu-multi-select-dropdown">
                    <select asp-for="NationalityCode" class="form-control form-control-sm multiselectCustom" title="----Select Nationality----" asp-items="@ViewBag.NationalityCodeDD as SelectList">
                    </select>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-4 text-end" style="text-align: right;">
                <div class="form-group">
                    <label asp-for="Religion" class="col-form-label-sm">Religion</label>
                </div>
            </div>

            <div class="col-sm-6">
                <div class="form-group shefu-multi-select-dropdown">
                    <select asp-for="ReligionCode" class="form-control form-control-sm multiselectCustom" title="----Select Religion----" asp-items="@ViewBag.ReligionCodeDD as SelectList">
                    </select>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-4 text-end" style="text-align: right;">
                <div class="form-group">
                    <label asp-for="MaritalStatus" class="col-form-label-sm">MaritalStatus</label>
                </div>
            </div>

            <div class="col-sm-6">
                <div class="form-group shefu-multi-select-dropdown">
                    <select asp-for="MaritalStatusCode" class="form-control form-control-sm multiselectCustom" title="----Select MaritalStatus----" asp-items="@ViewBag.MaritalStatusCodeDD as SelectList">
                    </select>
                </div>
            </div>
        </div>

        <div class="row">


            <div class="col-sm-4 text-end" style="text-align:right;">
                <div class="form-group">
                    <label class="col-form-label-sm"> </label>
                </div>
            </div>

            <div class="col-sm-6">
                <div class="button-container">

                    <button type="button" class="accent-light exportReportBtnclass" id="exportReportBtn">
                        <i class="fas fa-print"></i> Export Report
                    </button>

                    <button type="button" class="accent-light" id="previewReportBtn">
                        <i class="fas fa-eye"></i> Preview
                    </button>

                   @*  <button type="button" class="accent-light" id="previewReportBtn">
                        <i class="fas fa-eye"></i> Preview(List)
                    </button> *@
                </div>

            </div>


        </div>

    </div>
</div>




<div>
    <iframe id="pdfPreviewFrame" style="width:85vw;height:100vh;display:none"></iframe>
</div>





