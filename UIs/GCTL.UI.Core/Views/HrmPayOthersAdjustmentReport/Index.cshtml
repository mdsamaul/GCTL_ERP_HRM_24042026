    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }


    <!-- Load the plugin -->
    <script src="~/js/pages/payOthersBenefitReport.js"></script>
    <link href="~/lib/bootstrap-multiselect-master/dist/css/bootstrap-multiselect.min.css" rel="stylesheet" />
    <script src="~/lib/bootstrap-multiselect-master/dist/js/bootstrap-multiselect.min.js"></script>
    <!-- Initialize the plugin -->
    <script type="text/javascript">
        $(function () {
            $.otherBenefitsReport({
                baseUrl: '@Url.Action("Index", "HrmPayOthersAdjustmentReport")',
                load: function () {
                    console.log("Custom load logic called from Razor view");
                }
            });
        });
    </script>
}