@model GCTL.Core.ViewModels.DoctorWorkingPlace.DoctorWorkingPlaceSetupViewModel

<div style="padding-top: 10px;">
    <div class="row">
        <div class="col-lg-6">
            <span id="message"></span>
        </div>
        <div class="col-lg-6">
        </div>
    </div>
    <div class="form-group row">
        <input type="hidden" id="lastCode" />
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Ldate" />
        <input type="hidden" asp-for="ModifyDate" />
        <div class="col-lg-6">
            <label asp-for="WorkingPlaceCode">Working Place Id</label>
            <div class="input-group input-group-sm">
                <input asp-for="WorkingPlaceCode" class="form-control form-control-sm js-doctorWorkingPlace-code" readonly="readonly" />
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-lg-6">
            <label asp-for="WorkingPlaceName">Working Place</label>
            <span class="text-danger">*</span>
            <input asp-for="WorkingPlaceName" class="form-control form-control-sm js-doctorWorkingPlace" placeholder="Enter Working place" />
            <span asp-validation-for="WorkingPlaceName" class="text-danger" />
        </div>
        <div class="col-lg-6">
            <label asp-for="WorkingPlaceShortName">Short Name</label>
            <input asp-for="WorkingPlaceShortName" class="form-control form-control-sm" placeholder="Enter Short Name" />
        </div>
    </div>
        <div class="form-group row">
        <div class="col-lg-6">
            <label asp-for="BanglaWorkingPlace">Working place (বাংলা) </label>
            <span class="text-danger"></span>
            <input asp-for="BanglaWorkingPlace" class="form-control form-control-sm" placeholder="Enter Working place (বাংলা)" />        
        </div>
        <div class="col-lg-6">

        </div>
    </div>



    @if (Model.Id > 0)
    {
        <hr />
        <div class="form-group row">
            <div class="col-lg-6">
                @if (Model.Ldate.HasValue)
                {
                    <label>Creation Date: </label>
                    <label>@Model.Ldate.Value.ToString(ApplicationConstants.DateFormat)</label>
                }
            </div>
            <div class="col-lg-6">
                @if (Model.ModifyDate.HasValue)
                {
                    <label>Last Update Date: </label>
                    <label>@Model.ModifyDate.Value.ToString(ApplicationConstants.DateFormat)</label>
                }
            </div>
        </div>
    }
</div>
<div class="row no-print" style="margin-top: 9px;">
    <div class="col-12">
        <button type="button" class="btn btn-default success-btn btn-common btn-circle float-right js-doctorWorkingPlace-save" data-id="@Model.WorkingPlaceCode">
            <i class="fas fa-save"></i> Save
        </button>
    </div>
</div>