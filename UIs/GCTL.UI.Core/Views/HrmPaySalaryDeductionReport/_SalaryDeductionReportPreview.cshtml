<div id="salaryDeductionReport-container" class="card mt-3" style="display: none;">
    <div class="card-body">
        <!-- Preview toolbar -->
        <div id="previewToolbar" class="d-flex justify-content-between align-items-center p-3 bg-light border-bottom rounded-top">
            <h6 class="mb-0 text-muted">Report Preview</h6>
            <div>
                <button id="refreshPreviewBtn" class="btn btn-sm btn-outline-primary me-2" title="Refresh Preview">
                    <i class="fas fa-sync-alt"></i> Refresh
                </button>
                <button id="closePreviewBtn" class="btn btn-sm btn-outline-danger" title="Close Preview">
                    <i class="fas fa-times"></i> Close
                </button>
            </div>
        </div>

        <!-- Preview content -->
        <div id="previewContent" class="position-relative" style="min-height: 800px;">
            <iframe id="previewIframe"
                    class="w-100 border-0 rounded-bottom"
                    style="height: 800px; display: none;"
                    src="">
            </iframe>

            <!-- Loading indicator -->
            <div id="previewLoadingIndicator"
                 class="position-absolute top-50 start-50 translate-middle text-center bg-white p-4 rounded shadow"
                 style="display: none;">
                <div class="spinner-border text-primary" role="status">
                </div>
                <p class="mt-2 mb-0">Loading preview...</p>
            </div>
        </div>
    </div>
</div>