@model List<GCTL.Core.ViewModels.HRMCompanyWeekEnds.HRMCompanyWeekEndSetupViewModel>

<table id="companyWeekEnds-grid" class="table table-striped  table-bordered table-sm table-hover table-common">

        <thead class="row-border">
            <tr class="table row-border">
                <th class="text-center text-middle">
                    Select <br /> <input type="checkbox" id="companyWeekEnds-check-all" />
                </th>
                <th class="text-center text-middle">Weekend Id</th>
                <th class="text-center text-middle">Weekend Day(s)</th>
                <th class="text-center text-middle">Effective Date</th>

            </tr>
        </thead>
        <tbody>

            @if (Model == null || !Model.Any())
            {
                <tr class="text-center text-middle">
                    <td colspan="5">No Weekend day  Available.</td>
                </tr>
            }
            else
            {
                @foreach (var item in Model.OrderByDescending(x => x.CompanyWeekEndCode))
                {
                    <tr>
                        <td class="text-center">
                            <input type="checkbox" class="text-center text-middle checkBox" data-id="@item.CompanyWeekEndCode" value="@item.CompanyWeekEndCode" />
                        </td>
                        <td>
                            <a href="#" class='btn js-companyWeekEnds-edit'
                               style="text-decoration: underline; color: rebeccapurple;"
                               data-id="@item.CompanyWeekEndCode" title="Edit">
                                @item.CompanyWeekEndCode
                            </a>
                        </td>

                        <td class="text-center text-middle">@string.Join(", ", item.Weekend)</td>

                        <td class="text-center text-middle">@item.EffectiveDate.ToString("dd/MM/yyyy")</td>

                    </tr>
                }
            }


        </tbody>
    </table>
</div>

