@model GCTL.UI.Core.ViewModels.RosterScheduleEntry.RosterScheduleEntryViewModel
@{
    
    Model.Breadcrumb = "RosterScheduleEntry";
    Model.PageTitle = "Roster Schedule Entry";
}

<style>
    .swal2-toast {
        min-height: 40px !important;
        padding: 0px 12px !important;
        font-size: 14px !important;
        width: auto !important;
    }

        .swal2-toast .swal2-title {
            font-size: 14px !important;
            text-align: left !important;
            padding-top: 10px !important;
        }

        .swal2-toast .swal2-icon {
            width: 20px !important;
            height: 30px !important;
            margin: 0 5px 0 0 !important;
        }

    .swal2-timer-progress-bar {
        background: #FF5722 !important;
    }

    .sticky-scrolled {
        background-color: #fff !important;
        transition: background-color 0.3s ease-in-out;
        opacity: 95%;
    }

</style>

<!-- Content Header (Page header) -->
<div class="container-fluid">
    <partial name="_PageHeader" model="Model"></partial>
</div>

<section class="content consistent-look">
    <div class="container-fluid">
        <div class="row px-2 pr-3">
            <!-- Left Side: Form -->
            <div class="col-md-12 pr-0">
                <div class="card">
                   
                    <div id="stickyHeader" class="card-header px-2 sticky-top" style="min-height: 50px; z-index: 1020;">
                        <partial name="_Toolbars" model="new ToobarModel() { Title = Model.Breadcrumb, Code = Model.Code, Name = Model.Setup.RosterScheduleId}"></partial>
                    </div>


                    <div class="card-body px-2">
                        <div class="container-fluid py-2">
                            <div>
                                <h5>Filter By:</h5>
                            </div>
                            <div class="row d-flex flex-wrap justify-content-start text-center align-items-end pb-4">
                                <div class="col-auto">
                                    <label for="companySelect">Company</label>
                                    <select id="companySelect" class="form-control form-control-sm"></select>
                                </div>
                                <div class="col-auto">
                                    <label for="branchSelect">Branch</label>
                                    <select id="branchSelect" class="form-control form-control-sm" multiple="multiple"></select>
                                </div>
                                <div class="col-auto">
                                    <label for="divisionSelect">Division</label>
                                    <select id="divisionSelect" class="form-control form-control-sm" multiple="multiple"></select>
                                </div>
                                <div class="col-auto">
                                    <label for="departmentSelect">Department</label>
                                    <select id="departmentSelect" class="form-control form-control-sm" multiple="multiple"></select>
                                </div>
                                <div class="col-auto">
                                    <label for="designationSelect">Designation</label>
                                    <select id="designationSelect" class="form-control form-control-sm" multiple="multiple"></select>
                                </div>
                                <div class="col-auto">
                                    <label for="employeeSelect">Employee</label>
                                    <select id="employeeSelect" class="form-control form-control-sm" multiple="multiple"></select>
                                </div>
                                <div class="col-auto">
                                    <label for="activityStatusSelect">Activity Status</label><br />
                                    <select id="activityStatusSelect" class="form-control form-control-sm">
                                        <option value="01">Active</option>
                                        <option value="02">Inactive</option>
                                        <option value="02,01">All</option>
                                    </select>
                                </div>
                            </div>
                            <!-- table: Grid -->
                            <div class="col-md-12 mt-2" style="padding-left: 0px;padding-right: 0px;">
                                <partial name="_Grid" />
                            </div>
                            <div>
                                <partial name="_FromRoster"></partial>
                            </div>
                            <div>
                                <partial name="_ExcelFileUploaded"></partial>
                            </div>
                            <div>
                                <partial name="_RosterScheduleEntryGrid"></partial>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>
</section>

<!-- Flatpickr CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">

<!-- Optional: Theme -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/themes/material_blue.css">

<!-- Bootstrap (Optional, for layout) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">



<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- Bootstrap Bundle JS (includes Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <!-- Bootstrap Multiselect CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-multiselect/1.1.2/css/bootstrap-multiselect.min.css">

    <!-- Bootstrap Multiselect JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-multiselect/1.1.2/js/bootstrap-multiselect.min.js"></script>

    <!-- Flatpickr CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">

    <!-- Flatpickr JS -->
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

    <!-- Flatpickr Month Select Plugin CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/plugins/monthSelect/style.css">

    <!-- Flatpickr Month Select Plugin JS -->
    <script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/plugins/monthSelect/index.js"></script>











    <!-- Your custom JS -->
    <script src="~/js/pages/RosterScheduleEntry.js"></script>
}

