<div class="row g-3 mt-4 border py-2 rounded rounded-lg">
    <input type="hidden" id="hiddenRosterId" value="" />
    <input type="hidden" id="TcIdRosterDelete" value="" />

    <!-- Roster Schedule -->
  <!-- HTML Form Structure -->
    <div class="col-md-6 mt-2 editHideRosterSchedule">
        <div class="d-flex align-items-center gap-3">
            <span class="col-md-3 mb-0 text-right"><strong>Roster Schedule</strong></span>
            <div class="col-md-8 d-flex align-items-center p-0">
                <div class="form-check">
                    @* <input class="form-check-input" type="radio" name="rosterOption" id="byDate" checked> *@
                    @* <label class="form-check-label" for="byDate">By Date</label> *@

                    <label><input type="radio" name="filterType" id="byDate" checked> By Date</label>
                   

                </div>
                <div class="form-check mx-3">
                    @* <input class="form-check-input" type="radio" name="rosterOption" id="byMonth"> *@
                    @* <label class="form-check-label" for="byMonth">By Month</label> *@
                    <label><input type="radio" name="filterType" id="byMonth"> By Month</label>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6"></div>

    <!-- Date From + To Date Fields -->
    <div class="col-12" id="dateFields" style="padding: 0px;">
        <div class="col-12 d-flex align-items-center" style="padding-left: 5px;">
            <div class="col-md-6 showFromDate mt-2">
                <div class="d-flex align-items-center">
                    <label for="FromDatePicker" class="col-md-3 mb-0 editDate text-right">Date From<sup class="text-danger"><span style="font-size:20px;">*</span></sup></label>
                    <input type="text" id="FromDatePicker" class="form-control form-control-sm col-md-6 text-left cursor-pointer" placeholder="Select from date">
                </div>
            </div>
            <div class="col-md-6 editHide mt-2">
                <div class="d-flex align-items-center justify-content-md-start">
                    <label for="toDateRosterFrom" class="mb-0">To<sup class="text-danger"><span style="font-size:20px;">*</span></sup></label>
                    <input style="margin-left: 15px;" type="number" id="toDateRosterFrom" class="form-control form-control-sm col-md-6 cursor-pointer" placeholder="To Date" />
                </div>
            </div>
       </div>
    </div>
   
    <!-- Month + Year Fields -->
    <div class="col-6" id="monthFields" style="display: none; gap: 0px; padding: 0px;">
      
                <div class="d-flex align-items-center col-md-12">
            <label for="monthRosterFrom" class="mb-0 col-md-3 text-right">Month<sup class="text-danger"><span style="font-size:20px;">*</span></sup></label>
                 @* <input type="text" id="monthRosterFrom" class="form-control  col-md-5 form-control-sm " placeholder="Month" /> *@
                 <select id="monthRosterFrom" class="form-control form-control-sm col-md-6">
                     <option value="">--- Select Month ---</option>
                 </select>
                </div>               
      
             <div class="col-md-6 mt-2">
                <div class="d-flex align-items-center justify-content-md-start">
                <label for="YearRosterFrom" class="col-md-3 mb-0 text-right">Year<sup class="text-danger"><span style="font-size:20px;">*</span></sup></label>
                    <input type="number" id="YearRosterFrom" class="form-control form-control-sm col-md-12" placeholder="Year" />
                </div>
                <div class="validYearMessage text-danger pt-1 fs-6 col-md-12 text-center"></div>
            </div> 
     
    </div>




   














    <div class="col-md-12 mt-2 p-0">
        <div class="d-flex col-md-6  align-items-center">
            <label for="shiftSelect" class="col-md-3 mb-0 text-right">Shift<sup class="text-danger"><span style="font-size:20px;">*</span></sup></label>
            <select id="shiftSelect" class="form-control form-control-sm col-md-6">
               
            </select>
        </div>
    </div>


    <!-- Remarks (full width) -->
    <div class="col-md-9 mt-2">
        <div class="d-flex align-items-center">
            <label for="remarks" class="col-md-2 mb-0 text-right">Remarks</label>
            <textarea id="remarks" class="form-control col-md-8 form-control-sm" rows="2" placeholder="Remarks"></textarea>
        </div>
    </div>
</div>

