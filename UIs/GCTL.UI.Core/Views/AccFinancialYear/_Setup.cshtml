@model GCTL.Core.ViewModels.AccFinancialYears.AccFinancialYearSetupViewModel

<style>
    .form-label {
        text-align: right;
    }

    .form-group-row {
        display: flex;
        align-items: center;
        gap: 5px;
        margin-bottom: 1rem;
    }

    .form-group-row label {
        min-width: 120px;
        white-space: nowrap;
        margin-bottom: 0;
    }

    .form-group-row .form-control,
    .form-group-row select {
        flex: 1;
        min-width: 0;
    }
</style>


<div style="padding-top: 10px;">
    <div class="row">
        <div class="col-lg-6">
            <span id="message"></span>
        </div>
        <div class="col-lg-6">
        </div>
    </div>
    <div class="form-group">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input type="hidden" id="lastCode" />
        <input type="hidden" asp-for="Tc" />
        <input type="hidden" asp-for="FinancialCodeNo" />
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Ldate" />
        <input type="hidden" asp-for="ModifyDate" />
        <div class="row mb-3">
            <div class="col-md-4">
                <div class="form-group-row">
                    <label asp-for="Name" class="col-md-4 form-label">Financial Year <span style="color:red">*</span></label>
                    
                    <div class="col-md-8">
                        <input asp-for="Name" type="text" class="form-control js-FinancialYear-code" autofocus required tabindex="1" />
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group-row">
                    <label asp-for="StartDate" class="col-md-4 form-label">Start Date<span style="color:red">*</span> </label>
                    <div class="col-md-8">
                        <input type="date" asp-for="StartDate" class="form-control js-FinancialYear-check-duplicateName" required tabindex="2" />
                    </div>
                </div>
            </div>
            <div class="col-md-1"></div>
            <div class="col-md-4">
                <div class="form-group-row">
                    <label asp-for="EndDate" class="col-md-4 form-label">End Date</label>
                    <div class="col-md-8">
                        <input type="date" asp-for="EndDate" class="form-control js-FinancialYear-check-duplicateName" tabindex="3" />
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (Model.Tc > 0)
    {

        <hr />
        <div class="form-group row" id="LdateModifyHide">
            <div class="col-lg-6">
                @if (Model.Ldate.HasValue)
                {
                    <label>Creation Date: </label>

                    <label>@Model.Ldate?.ToString("dd/MM/yyyy")</label>
                }
            </div>
            <div class="col-lg-6 d-flex justify-content-center">
                @if (Model.ModifyDate.HasValue)
                {
                    <label>Last Update Date: </label>

                    <label>@Model.ModifyDate?.ToString("dd/MM/yyyy")</label>
                }
            </div>
        </div>
    }
</div>
