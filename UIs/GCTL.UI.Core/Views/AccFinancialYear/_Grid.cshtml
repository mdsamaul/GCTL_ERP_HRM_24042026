@model List<GCTL.Core.ViewModels.AccFinancialYears.AccFinancialYearSetupViewModel>


<table id="FinancialYear-grid" class="table table-striped  table-bordered table-sm table-hover table-common">
    <thead class="row-border">
        <tr class="table row-border">
            <th class="text-center text-middle" style="width: 10%;">
                Select <br /> <input type="checkbox" id="FinancialYear-check-all" />
            </th>
            <th class="text-center text-middle" style="width: 10%;"> Id</th>
            <th class="text-center text-middle" style="width: 30%;"> Financial Year</th>
            <th class="text-center text-middle" style="width: 24%;"> Start Date</th>
            <th class="text-center text-middle" style="width: 24%;"> End Date</th>

        </tr>
    </thead>
    <tbody>

        @if (Model == null || !Model.Any())
        {
            <tr class="text-center text-middle">
                <td colspan="5">No Data Available.</td>
            </tr>
        }
        else
        {
            @foreach (var item in Model.OrderByDescending(x => x.FinancialCodeNo))
            {
                <tr>
                    <td class="text-center">
                        <input type="checkbox" class="text-center text-middle checkBox" data-id="@item.FinancialCodeNo" value="@item.FinancialCodeNo" />
                    </td>
                    <td class="text-center">
                        <a href="#" class='btn js-FinancialYear-edit'
                           style="text-decoration: underline; color: rebeccapurple;"
                           data-id="@item.FinancialCodeNo" title="Edit">
                            @item.FinancialCodeNo
                        </a>
                    </td>

                    <td class="text-center text-middle">@item.Name</td>
                    <td class="text-center text-middle">@(item.StartDate.HasValue ? item.StartDate.Value.ToString("dd/MM/yyyy") : "")</td>
                    <td class="text-center text-middle">@(item.EndDate.HasValue ? item.EndDate.Value.ToString("dd/MM/yyyy") : "")</td>


                </tr>
            }
        }


    </tbody>
</table>
