@model List<GCTL.Core.ViewModels.Grades.GradesSetupViewModel>

<table id="Grades-grid" class="table table-striped  table-bordered table-sm table-hover table-common">

        <thead class="row-border">
            <tr class="table row-border">
                <th class="text-center text-middle" style="width:10%;">
                    Select <br /> <input type="checkbox" id="Grades-check-all" />
                </th>
                <th class="text-center text-middle" style="width: 8%;" > Id</th>
                <th class="text-center text-middle" style="width: 30%;" >Grade Type</th>
                <th class="text-center text-middle" style="width: 14%;" >Grade Name</th>
                <th class="text-center text-middle" style="width: 14%;" >Short Name</th>
                <th class="text-center text-middle" style="width: 12%;" >Scale From</th>
                <th class="text-center text-middle" style="width: 12%;" >Scale To</th>

            </tr>
        </thead>
        <tbody>

            @if (Model == null || !Model.Any())
            {
                <tr class="text-center text-middle">
                    <td colspan="8">No Grade Available.</td>
                </tr>
            }
            else
            {
                @foreach (var item in Model.OrderByDescending(x => x.GradeCode))
                {
                    <tr>
                        <td class="text-center">
                            <input type="checkbox" class="text-center text-middle checkBox" data-id="@item.GradeCode" value="@item.GradeCode" />
                        </td>
                        <td>
                            <a href="#" class='btn js-Grades-edit'
                               style="text-decoration: underline; color: rebeccapurple;"
                               data-id="@item.GradeCode" title="Edit">
                                @item.GradeCode
                            </a>
                        </td>
                        <td class="text-center text-middle">@item.GradeTypeName</td>
                        <td class="text-center text-middle">@item.GradeName</td>
                        <td class="text-center text-middle">@item.GradeShortName</td>
                        <td class="text-center text-middle">@item.FromGrossSalary</td>
                        <td class="text-center text-middle">@item.ToGrossSalary</td>
                    </tr>
                }
            }


        </tbody>
 </table>
