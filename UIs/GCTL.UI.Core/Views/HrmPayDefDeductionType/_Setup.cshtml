@model GCTL.Core.ViewModels.HrmPayDefDeductionTypes.DeductionTypeSetupViewModel

<div style="padding-top: 10px;">
    <div class="row">
        <div class="col-lg-6">
            <span id="message"></span>
        </div>
        <div class="col-lg-6">
        </div>
    </div>
    <div class="form-group row">
        <input type="hidden" id="lastCode" />
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Ldate" />
        <input type="hidden" asp-for="ModifyDate" />
        <div class="col-lg-6">
            <label asp-for="DeductionTypeId">Deduction Type Id</label>
            <div class="input-group input-group-sm">
                <input asp-for="DeductionTypeId" class="form-control form-control-sm js-deduction-type-code" readonly="readonly" />
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-lg-6">
            <label asp-for="DeductionType">Deduction type</label>
            <span class="text-danger">*</span>
            <input asp-for="DeductionType" class="form-control form-control-sm js-deduction-type-check-availability" placeholder="Enter Deduction Type" tabindex="1" autofocus />
            <span asp-validation-for="DeductionType" class="text-danger" />
        </div>
        <div class="col-lg-6">
            <label asp-for="ShortName">Short Name</label>
            <input asp-for="ShortName" class="form-control form-control-sm" placeholder="Enter Short Name" tabindex="2" />
        </div>
    </div>

    @if (Model.Id > 0)
    {
        <hr />
        <div class="form-group row">
            <div class="col-lg-6">
                @if (Model.Ldate.HasValue)
                {
                    <label>Creation Date: </label>
                    <label>@Model.Ldate.Value.ToString(ApplicationConstants.DateFormat)</label>
                }
            </div>
            <div class="col-lg-6">
                @if (Model.ModifyDate.HasValue)
                {
                    <label>Last Update Date: </label>
                    <label>@Model.ModifyDate.Value.ToString(ApplicationConstants.DateFormat)</label>
                }
            </div>
        </div>
    }
</div>
<div class="row no-print" style="margin-top: 9px;">
    <div class="col-12">
        <button type="button" class="btn btn-default success-btn btn-common btn-circle float-right js-deduction-type-save" data-id="@Model.DeductionTypeId" tabindex="3">
            <span class="btn-icon-wrapper pr-2 opacity-7"><i class="fas fa-save"></i></span> Save
        </button>
    </div>
</div>

