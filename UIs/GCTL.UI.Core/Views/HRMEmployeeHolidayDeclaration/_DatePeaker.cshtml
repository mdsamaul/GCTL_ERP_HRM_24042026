<style>
    .label-right {
        text-align: right;
        width: 150px;
        white-space: nowrap;
    }
</style>
<div class="card mb-4 border-0 shadow-sm">
    <div class="card-header bg-light">
        <h6 class="mb-0"><i class="fa fa-calendar-alt me-2 px-3"></i>Employee Holiday Declaration</h6>
    </div>
    <div class="card-body">
        <div class="row g-3">
            <!-- Holiday Dec. Type -->
            <div class="row g-3 mt-4">
                <input type="text" name="ehdid" id="ehdid" hidden />
                <!-- Holiday Dec. Type -->
                <div class="col-md-6 col-6 col-lg-6 col-xl-6 col-sm-6 mt-2">
                    <div class="d-flex align-items-center">
                        <label for="hdtcode" class="col-md-3 col-2 col-lg-2 col-xl-2 col-sm-2 mb-0 label-right">Holiday Type<span style="color:red;">*</span></label>
                        <select class="form-control col-md-7 col-8 col-lg-8 col-xl-8 col-sm-8" id="hdtcode" required tabindex="1"></select>
                    </div>
                </div>
                <div class="col-md-6"></div>
                <!-- Date -->
                <div class="col-md-6 mt-2">
                    <div class="d-flex align-items-center">
                        <label for="holidayDate" class="col-md-2 mb-0 label-right">Date<span style="color:red;">*</span></label>
                        <input type="date" id="holidayDate" class="form-control col-md-8" placeholder="Pick a Date" tabindex="2" />
                    </div>
                </div>
                <!-- Is Day off Duty -->
                <div class="col-md-6 me-3">
                    <div class="d-flex align-items-center">
                        <div class="col-md-2 me-3">
                            <label for="isDayoffDuty" class="me-0 mb-0">Is Day off Duty</label>
                        </div>
                        <div class="col-md-1">
                            <input type="checkbox" id="isDayoffDuty" class="form-control-sm" tabindex="3" />
                        </div>
                        <div class="col-md-8"></div>
                    </div>
                </div>
                <!-- In Place of Date -->
                <div class="col-md-6 mt-2">
                    <div class="d-flex align-items-center">
                        <label for="inPlaceDate" class="col-md-2 mb-0 label-right">In Place of Date</label>
                        <input type="date" id="inPlaceDate" class="form-control col-md-8" placeholder="Pick a Date" tabindex="4" />
                    </div>
                </div>
                <div class="col-md-6"></div>
                <!-- Remarks (full-width input aligned with others) -->
                <div class="col-md-12 mt-2">
                    <div class="d-flex align-items-center">
                        <label for="remarks" class="col-md-1 mb-0 label-right">Remarks</label>
                        <textarea id="remarks" class="form-control col-md-10" placeholder="Remarks" tabindex="5"></textarea>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
