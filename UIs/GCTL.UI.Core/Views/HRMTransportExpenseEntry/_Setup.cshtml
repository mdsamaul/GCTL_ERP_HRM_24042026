@model GCTL.Core.ViewModels.HRMTransportExpenseEntry.TransportExpenseDetailsTempDto

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<!-- Font Awesome -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

<input type="hidden" asp-for="AutoId" />

<table class="table table-bordered">
    <thead class="text-center">
        <tr>
            <th>Expense Head</th>
            <th>Amount</th>
            <th>Remarks</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody id="ExpenceTransportContainer">
        <tr>
            <td>
                <select asp-for="ExpenseHeadId" asp-items="ViewBag.ExpenseHeadList" class="form-select form-select-sm form-control form-control-sm" placeholder="-- Select Expense Head--">
                    <option value="">--Select Expense Head--</option>
                </select>
            </td>
            <td>
                <input asp-for="Amount" class="form-control form-control-sm" placeholder="Enter Amount"/>
            </td>
            <td>
                <textarea asp-for="Remarks" class="form-control form-control-sm " rows="1" placeholder="Remarks"></textarea>
            </td>
            <td class="text-center">
                <button type="button" id="ExpenceTransportAddMore" class="btn btn-sm btn-outline-success">
                    <i class="fas fa-plus"></i> 
                </button>
                <button type="button" class="btn btn-sm btn-outline-primary me-1" id="TempDetailsClear">
                    <i class="fas fa-eraser"></i>
                </button>
              
            </td>
        </tr>
    </tbody>
</table>
