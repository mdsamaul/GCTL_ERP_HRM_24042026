@model GCTL.UI.Core.ViewModels.CompanyInfos.CompanyInfosPageViewModel

@{

    Model.PageTitle = ViewBag.Title;
    ViewBag.Title = "Employee Company Title";
    Model.Breadcrumb = "Employee Company Title";
}

<!-- Content Header (Page header) -->
<partial name="_PageHeader" model="Model" />

<section class="content consistent-look">
    <div class="container-fluid">
        <div class="row">

            <div class="col-md-6 pr-0">
                <div class="card">
                    <div class="card-header px-2">
                        <partial name="_Toolbars" model="new ToobarModel() { Title = Model.Breadcrumb, Code = Model.Code, Name = Model.Setup.CompanyNameId }" />
                    </div>
                    <div class="card-body px-2">

                        <form asp-action="Setup" method="post" id="CompanyInfos-form" asp-controller="CompanyInfos">

                            <div class="js-CompanyInfos-form-container">
                                <partial name="_Setup" model="Model.Setup" />
                            </div>



                        </form>
                    </div>
                </div>
            </div>

            <div class="col-md-6" style="height:570px;overflow:auto;">
                <div class="card">
                    <div class="card-body p-2 pt-3">
                        <div class="js-CompanyInfos-grid-container">
                            @await Html.PartialAsync("_Grid", Model.TableListData)
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <partial name="_BottomNavigation" />
    </div>
</section>
<partial name="DeleteModal" />


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/pages/companyInfos.js"></script>
    <script type="text/javascript">
        var options = {
            baseUrl: '@Url.Action("", "CompanyInfos")'
        };
        options.load = () => {
        };

        $.companyInfos(options);
    </script>
}

