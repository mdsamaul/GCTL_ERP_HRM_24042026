@model List<GCTL.Core.ViewModels.CompanyInfos.CompanyInfosSetupViewModel>

<table id="CompanyInfos-grid" class="table table-striped  table-bordered table-sm table-hover table-common">
    <thead class="row-border">
        <tr class="table row-border">
            <th class="text-center text-middle" style="width: 10%;">
                Select <br /> <input type="checkbox" id="CompanyInfos-check-all" />
            </th>
            <th class="text-center text-middle" style="width: 10%;"> Id</th>
            <th class="text-center text-middle" style="width: 60%;"> Company Name</th>
            <th class="text-center text-middle" style="width: 20%;">Short Name</th>

        </tr>
    </thead>
    <tbody>

        @if (Model == null || !Model.Any())
        {
            <tr class="text-center text-middle">
                <td colspan="8">No Company Title Available.</td>
            </tr>
        }
        else
        {
            @foreach (var item in Model.OrderByDescending(x => x.CompanyNameId))
            {
                <tr>
                    <td class="text-center">
                        <input type="checkbox" class="text-center text-middle checkBox" data-id="@item.CompanyNameId" value="@item.CompanyNameId" />
                    </td>
                    <td>
                        <a href="#" class='btn js-CompanyInfos-edit'
                           style="text-decoration: underline; color: rebeccapurple;"
                           data-id="@item.CompanyNameId" title="Edit">
                            @item.CompanyNameId
                        </a>
                    </td>

                    <td class="text-center text-middle">@item.CompanyName</td>
                    <td class="text-center text-middle">@item.ShortName</td>


                </tr>
            }
        }


    </tbody>
</table>
