@model GCTL.Core.ViewModels.HrmPayDefBenefitTypes.HrmPayDefBenefitTypeViewModel


<div style="padding-top: 10px;">
    <div class="row">
        <div class="col-lg-6">
            <span id="message"></span>
        </div>
        <div class="col-lg-6">
        </div>
    </div>
    <div class="form-group row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input type="hidden" id="lastCode" />
        <input type="hidden" asp-for="Tc" />
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Ldate" />
        <input type="hidden" asp-for="ModifyDate" />
        <div class="col-lg-6 mb-2">
            <label asp-for="BenefitTypeId"> ID </label>
            <div class="input-group input-group-sm">
                <input asp-for="BenefitTypeId" type="text" class="form-control form-control-sm js-BenefitTypeId-code" readonly="readonly" />
            </div>
        </div>
        <div class="col-lg-6"></div>
        <div class="col-lg-6">
            <label asp-for="BenefitType">Benefit Type<span style="color:red">*</span> </label>
            <input type="text" asp-for="BenefitType" class="form-control form-control-sm js-Benefit-type-check-duplicateName"  required placeholder="Enter Benefit type" tabindex="1" />
        </div>
        <div class="col-lg-6">
            <label asp-for="ShortName">Short Name </label>
            <input type="text" asp-for="ShortName" class="form-control form-control-sm" placeholder="Enter Short Name" tabindex="2" />
        </div>

    </div>

    @if (Model.Tc > 0)
    {

        <hr />
        <div class="form-group row" id="LdateModifyHide">
            <div class="col-lg-6">
                @if (Model.Ldate.HasValue)
                {
                    <label>Creation Date: </label>

                    <label>@Model.Ldate?.ToString("dd/MM/yyyy")</label>
                }
            </div>
            <div class="col-lg-6">
                @if (Model.ModifyDate.HasValue)
                {
                    <label>Last Update Date: </label>

                    <label>@Model.ModifyDate?.ToString("dd/MM/yyyy")</label>
                }
            </div>
        </div>

    }

</div>
<div class="row no-print" style="margin-top: 9px;">
    <div class="col-12">
        <button type="button" class="btn btn-default success-btn btn btn-outline-success btn-common btn-circle float-right js-Benefit-type-save" tabindex="3" data-tc="@Model.Tc" data-id="@Model.BenefitTypeId">
            <i class="fas fa-save"></i> Save
        </button>
    </div>
</div>
