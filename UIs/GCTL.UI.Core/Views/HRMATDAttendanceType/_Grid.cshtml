@model List<GCTL.Core.ViewModels.HRMATDAttendanceTypes.HRMATDAttendanceTypeSetupViewModel>

<table id="HRMATDAttendanceType-grid" class="table table-striped  table-bordered table-sm table-hover table-common">

        <thead class="row-border">
            <tr class="table row-border">
                <th class="text-center text-middle">
                    Select <br /> <input type="checkbox" id="HRMATDAttendanceType-check-all" />
                </th>
                <th class="text-center text-middle"> ID</th>
                <th class="text-center text-middle">Attendance Type Name</th>
                <th class="text-center text-middle">Short Name</th>

            </tr>
        </thead>
        <tbody>

            @if (Model == null || !Model.Any())
            {
                <tr class="text-center text-middle">
                    <td colspan="5">No Hrm Attendance Type   Available.</td>
                </tr>
            }
            else
            {
                @foreach (var item in Model.OrderByDescending(x => x.AttendanceTypeCode))
                {
                    <tr>
                        <td class="text-center">
                            <input type="checkbox" class="text-center text-middle checkBox" data-id="@item.AttendanceTypeCode" value="@item.AttendanceTypeCode" />
                        </td>
                        <td>
                            <a href="#" class='btn js-HRMATDAttendanceType-edit'
                               style="text-decoration: underline; color: rebeccapurple;"
                               data-id="@item.AttendanceTypeCode" title="Edit">
                                @item.AttendanceTypeCode
                            </a>
                        </td>

                        <td class="text-center text-middle">@item.AttendanceTypeName</td>
                        <td class="text-center text-middle">@item.ShortName</td>


                    </tr>
                }
            }


        </tbody>
</table>


