                        <select class="w-100 form-control-sm unitDropdownVale" asp-items="ViewBag.UnitType as SelectList">
                            <option value="">Select UOM</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-6">
                <div class="d-flex align-items-center">
                    <div class="productLeft text-right">Purchase Cost </div>
                    <div class="productRight">
                        <input type="number" name="PurchaseCost" id="purchaseCost" value="" class="form-control-sm form-control" />
                    </div>
                </div>
            </div>
        </div>
        <div class="row py-2">
            <div class="col-12 col-md-6">
                <div class="d-flex justify-content-center align-items-center">
                    Create Date:<span class="createDate"></span>
                </div>
            </div>
            <div class="col-12 col-md-6">
                <div class="d-flex justify-content-center align-items-center">
                    Last Update Date:<span class="updateDate"></span>
                </div>
            </div>
        </div>
    </div>

