                                data-bs-toggle="modal" data-bs-target="#brandModal">
                            <i class="fas fa-plus"></i>
                        </button>
                    </div>

                    <div class="plusRightBtn">
                     
                       @*  <button class="btn btn-outline-success rounded-md d-flex justify-content-center align-items-center" id="brandBtn"
