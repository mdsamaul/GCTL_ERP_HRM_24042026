@model GCTL.UI.Core.ViewModels.SeparationTypes.SeparationTypesPageViewModel

@{

    Model.PageTitle = ViewBag.Title;
    ViewBag.Title = "Separation Type";
    Model.Breadcrumb = "Separation Type";
}

<!-- Content Header (Page header) -->
<partial name="_PageHeader" model="Model" />

<section class="content consistent-look">
    <div class="container-fluid">
        <div class="row">

            <div class="col-md-6 pr-0">
                <div class="card">
                    <div class="card-header px-2">
                        <partial name="_Toolbars" model="new ToobarModel() { Title = Model.Breadcrumb, Code = Model.Code, Name = Model.Setup.SeparationTypeId }" />
                    </div>
                    <div class="card-body px-2">

                        <form asp-action="Setup" method="post" id="SeparationTypes-form" asp-controller="SeparationTypes">

                            <div class="js-SeparationTypes-form-container">
                                <partial name="_Setup" model="Model.Setup" />
                            </div>

                        </form>
                    </div>
                </div>
            </div>

            <div class="col-md-6" style="height:570px;overflow:auto;">
                <div class="card">
                    <div class="card-body p-2 pt-3">
                        <div class="js-SeparationTypes-grid-container">
                            @await Html.PartialAsync("_Grid", Model.SeparationList)
                        </div>
                    </div>
                </div>
            </div>


        </div>


        <partial name="_BottomNavigation" />
    </div>
</section>
<partial name="DeleteModal" />


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/pages/separationTypes.js"></script>
    <script type="text/javascript">
        var options = {
            baseUrl: '@Url.Action("", "SeparationTypes")'
        };
        options.load = () => {
        };

        $.separationTypes(options);
    </script>
}
