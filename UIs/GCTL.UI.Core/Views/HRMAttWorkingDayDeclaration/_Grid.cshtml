@model List<GCTL.Core.ViewModels.HrmAttWorkingDayDeclarations.HrmAttWorkingDayDeclarationSetupViewModel>

<table id="HRMAttWorkingDayDeclaration-grid" class="table table-striped  table-bordered table-sm table-hover table-common">

        <thead class="row-border">
            <tr class="table row-border">
                <th class="text-center text-middle">
                    Select <br /> <input type="checkbox" id="HRMAttWorkingDayDeclaration-check-all" />
                </th>
                <th class="text-center text-middle"> ID</th>
                <th class="text-center text-middle">Working Day Date</th>
                <th class="text-center text-left">Remarks</th>

            </tr>
        </thead>
        <tbody>

            @if (Model == null || !Model.Any())
            {
                <tr class="text-center text-middle">
                    <td colspan="5">No Hrm Att Working Day Declaration   Available.</td>
                </tr>
            }
            else
            {
                @foreach (var item in Model.OrderByDescending(x => x.WorkingDayCode))
                {
                    <tr>
                        <td class="text-center">
                            <input type="checkbox" class="text-center text-middle checkBox" data-id="@item.WorkingDayCode" value="@item.WorkingDayCode" />
                        </td>
                        <td>
                            <a href="#" class='btn js-HRMAttWorkingDayDeclaration-edit'
                               style="text-decoration: underline; color: rebeccapurple;"
                               data-id="@item.WorkingDayCode" title="Edit">
                                @item.WorkingDayCode
                            </a>
                        </td>
                        
                        <td class="text-center text-middle">@item.WorkingDayDate.ToString("dd/MM/yyyy")</td>
                        <td class="text-center text-middle">@item.Remarks</td>
                      

                    </tr>
                }
            }


        </tbody>
</table>


