@model List<GCTL.Core.ViewModels.HRMDefBoardCountryNames.HRMDefBoardCountryNamesSetupViewModel>

<table id="HRMDefBoardCountryNames-grid" class="table table-striped  table-bordered table-sm table-hover table-common">

        <thead class="row-border">
            <tr class="table row-border">
                <th class="text-center text-middle">
                    Select <br /> <input type="checkbox" id="HRMDefBoardCountryNames-check-all" />
                </th>
                <th class="text-center text-middle"> Id</th>
                <th class="text-center text-middle"> Board Name</th>
                <th class="text-center text-middle">Short Name</th>

            </tr>
        </thead>
        <tbody>

            @if (Model == null || !Model.Any())
            {
                <tr class="text-center text-middle">
                    <td colspan="8">No  HRM Board Name Available.</td>
                </tr>
            }
            else
            {
                @foreach (var item in Model.OrderByDescending(x => x.BoardCode))
                {
                    <tr>
                        <td class="text-center">
                            <input type="checkbox" class="text-center text-middle checkBox" data-id="@item.BoardCode" value="@item.BoardCode" />
                        </td>
                        <td>
                            <a href="#" class='btn js-HRMDefBoardCountryNames-edit'
                               style="text-decoration: underline; color: rebeccapurple;"
                               data-id="@item.BoardCode" title="Edit">
                                @item.BoardCode
                            </a>
                        </td>

                        <td class="text-center text-middle">@item.BoardName</td>
                        <td class="text-center text-middle">@item.ShortName</td>


                    </tr>
                }
            }


        </tbody>
 </table>
