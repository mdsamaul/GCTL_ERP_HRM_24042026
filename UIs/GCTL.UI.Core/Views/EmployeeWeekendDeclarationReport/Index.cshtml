@{
	Model.Breadcrumb = "EmployeeWeekendDeclarationReport";
	Model.PageTitle = "Employee Weekend Declaration Report";
}
<style>
	.headerToobar {
		background: linear-gradient(to right, rgba(34, 211, 238, .1), #fff);
		box-shadow: 3px 0 6px rgba(0, 0, 0, 0.2);
		border-radius: 0px 11px 11px 0px;
	}

	#btnPreviewPdf, #downloadReport {
		transition: background-color 0.3s ease, color 0.3s ease, border-color 0.3s ease;
		min-width: 120px;
		min-height: 25px;
		position: relative;
		overflow: visible;
	}

		#btnPreviewPdf:hover,
		#downloadReport:hover {
			background-color: rgba(173, 255, 47, 0.2) !important;
			color: #1e90ff !important;
			border-color: #1e90ff !important;
			box-shadow: 0 4px 10px rgba(30, 144, 255, 0.5) !important;
		}


		#btnPreviewPdf i,
		#btnPreviewPdf span,
		#downloadReport i,
		#downloadReport span {
			transition: transform 0.3s ease;
			display: inline-block;
			transform: scale(1);
			margin-right: 2px;
		}

		#btnPreviewPdf:hover i,
		#downloadReport:hover i {
			transform: scale(1.3);
		}
</style>

<!-- Content Header (Page header) -->
<div class="container-fluid">
	<partial name="_PageHeader" model="Model"></partial>
</div>

<section class="content consistent-look">
	<div class="container-fluid">
		<div class="row px-2 pr-3">
			<div class="col-md-12 pr-0">
				<div class="w-100 headerToobar ">
					<partial name="_Toolbars" model="new ToobarModel() { Title = Model.Breadcrumb, Code = Model.Code, Name = Model.Setup.EWDId }"></partial>
				</div>
			</div>
		</div>


		<div class="col-md-12 col-12 mx-auto">
			<div class="border bg-white rounded-lg mt-3 px-2 ">
				<div class="col-12 col-md-5" style="padding-right: 0px;">
