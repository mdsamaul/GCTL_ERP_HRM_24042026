<div class="row">
    <div class="col-12 col-md-6">
        <div class="d-flex align-items-center">
            <div class="supplierTypeLeft text-right">Remarks</div>
            <div class="supplierTypeRight">
                <textarea asp-for="Remarks" rows="2" class="form-control-sm form-control" ></textarea>
            </div>
        </div>
    </div>
    <div class="col-12 col-md-6"></div>
</div>


