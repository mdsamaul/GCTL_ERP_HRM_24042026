<div class="row py-2">
    <div class="col-12 col-md-6">
        <div class="d-flex align-items-center">
            <div class="supplierTypeLeft text-right">Phone</div>
            <div class="supplierTypeRight">
                <input asp-for="Phone2" type="number" class="form-control-sm form-control" />
