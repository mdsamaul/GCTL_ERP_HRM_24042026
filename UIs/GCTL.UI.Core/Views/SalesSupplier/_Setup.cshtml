 @model GCTL.Core.ViewModels.SalesSupplier.SalesSupplierSetupViewModel

<!-- Hidden field for AutoId in Edit -->
<input type="hidden" asp-for="AutoId" />
<div class="row">
    <div class="col-12 col-md-6">
        <div class="d-flex align-items-center">
            <div class="supplierTypeLeft text-right">Supplier ID <span class="text-danger">*</span></div>
            <div class="supplierTypeRight">
                <input asp-for="SupplierID" class="form-control-sm form-control" readonly />
            </div>
        </div>
    </div>
    <div class="col-12 col-md-6">
        <div class="d-flex align-items-center">
            <div class="supplierTypeLeft text-right">Supplier <span class="text-danger">*</span></div>
            <div class="supplierTypeRight">
                <input asp-for="SupplierName" class="form-control-sm form-control" />
            </div>
        </div>
    </div>
</div>

<div class="row pt-2">
    <div class="col-12 col-md-6">
        <div class="d-flex align-items-center">
            <div class="supplierTypeLeft text-right">Supplier Type </div>
            <div class="supplierTypeRight">
                <select class="form-control-sm form-control dropdownSupplierType searchable-select" asp-items="ViewBag.SupplirTypeList as SelectList">
                    <option value="">Select Supplier Type</option>
                </select>
            </div>
            <div class="plusRightBtn">                
                <!-- Trigger Button -->
                 <button class="btn btn-outline-success supplierTypeBtn rounded-md d-flex justify-content-center align-items-center"
                        style="width: 31px; height: 31px; font-size: 9px; line-height: 1; margin-left:2px;"
                        data-bs-toggle="modal" data-bs-target="#supplierTypeModal">
                    <i class="fas fa-plus"></i>
                </button> 
              

            </div>
        </div>
    </div>

    <div class="col-12 col-md-6">
        <div class="d-flex align-items-center">
            <div class="supplierTypeLeft text-right">Address <span class="text-danger">*</span></div>
            <div class="supplierTypeRight">
                <textarea asp-for="SupplierAddress" rows="2" class="form-control-sm form-control" ></textarea>
            </div>
        </div>
    </div>
</div>


<div class="row pb-2">
    <div class="col-12 col-md-6">
        <div class="d-flex align-items-center">
            <div class="supplierTypeLeft text-right">Country</div>
            <div class="supplierTypeRight">
                <select class="form-control-sm form-control dropdownSupplierCountry searchable-select" asp-items="ViewBag.CountryAll as SelectList">
                    <option value="">Select Supplier Type</option>
                </select>
            </div>
            <div class="plusRightBtn">
                <!-- Trigger Button -->
                <button class="btn btn-outline-success supplierTypeCountryBtn rounded-md d-flex justify-content-center align-items-center"
                        style="width: 31px; height: 31px; font-size: 9px; line-height: 1; margin-left:2px;"
                        data-bs-toggle="modal" data-bs-target="#supplierTypeCountryModal">
                    <i class="fas fa-plus"></i>
                </button>
            </div>
        </div>
    </div>
    <div class="col-12 col-md-6">  </div>
</div>

<div class="row">
    <div class="col-12 col-md-6">
        <div class="d-flex align-items-center">
            <div class="supplierTypeLeft text-right">Phone</div>
            <div class="supplierTypeRight">
                <input asp-for="Phone" type="number" class="form-control-sm form-control" />
            </div>
        </div>
    </div>
    <div class="col-12 col-md-6">
        <div class="d-flex align-items-center">
            <div class="supplierTypeLeft text-right">Email</div>
            <div class="supplierTypeRight">
                <input asp-for="Email" type="email" class="form-control-sm form-control" />
            </div>
        </div>
    </div>
</div>

<div class="row py-2" >
    <div class="col-12 col-md-6">
        <div class="d-flex align-items-center">
            <div class="supplierTypeLeft text-right">Fax</div>
            <div class="supplierTypeRight">
                <input asp-for="FAX" class="form-control-sm form-control" />
            </div>
        </div>
    </div>
    <div class="col-12 col-md-6">
        <div class="d-flex align-items-center">
            <div class="supplierTypeLeft text-right">URL</div>
            <div class="supplierTypeRight">
                <input asp-for="URL" type="url" class="form-control-sm form-control" />
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-12 col-md-6">
        <div class="d-flex align-items-center">
            <div class="supplierTypeLeft text-right">BIN</div>
            <div class="supplierTypeRight">
                <input asp-for="BinNo" class="form-control-sm form-control" />
            </div>
        </div>
    </div>
    <div class="col-12 col-md-6">
