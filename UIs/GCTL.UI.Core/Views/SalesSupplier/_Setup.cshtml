            <div class="supplierTypeLeft text-right">VAT Reg No.</div>
            <div class="supplierTypeRight">
                <input asp-for="VatRegNo" class="form-control-sm form-control" />
            </div>
        </div>
    </div>
</div>


<div class="row py-2">
    <div class="col-12 col-md-6">
        <div class="d-flex align-items-center">
            <div class="supplierTypeLeft text-right">TIN</div>
            <div class="supplierTypeRight">
                <input asp-for="Tin" class="form-control-sm form-control" />
            </div>
        </div>
    </div>
    <div class="col-12 col-md-6"></div>
</div>


<div class="row">
