@model GCTL.UI.Core.ViewModels.HrmPayMonthlyOts.HrmPayMonthlyOtViewModel

@{
    ViewBag.Title = "EmployeeMonthlyOt";
    Model.Breadcrumb = "EmployeeMonthlyOt";
    Model.PageTitle = ViewBag.Title;
}

<style>
    .card-header {
        min-height: 50px;
    }

    #employee-filter-grid tbody tr td:first-child {
        width: 5%;
        padding: 0;
    }

    #employee-filter-grid thead th:first-child {
        width: 5%;
    }

    th.no-sort::after,
    th.no-sort::before {
        display: none !important;
    }

    #employee-filter-grid tbody {
        display: block;
        max-height: 500px;
        overflow-y: auto;
    }

        #employee-filter-grid thead,
        #employee-filter-grid tbody tr {
            display: table;
            width: 100%;
            table-layout: fixed;
        }
</style>


<partial name="_PageHeader" model="Model"></partial>
<section class="content-fluid">
    <div class="container-fluid">
        <div class="row">

            <div class="col-md-12">
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header bg-white py-3">
                        <partial name="_Toolbars" model="new ToobarModel() { Title = Model.Breadcrumb, Code = Model.Code, Name = Model.Setup.MonthlyOtid }"></partial>
                    </div>



                    <div class="col-md-12">
                        <partial name="_Grid" />
                    </div>

                    <hr class="my-4" />
                    <div class="card-body">
                        <div id="monthlyOtForm">
                            <partial name="_Setup"></partial>
                        </div>

                        <div>
                            <partial name="_ExcelFileUpload"></partial>
                        </div>

                        <div>
                            <partial name="_monthlyOtGrid"></partial>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/pages/payMonthlyOt.js"></script>

    <link href="~/lib/bootstrap-multiselect-master/dist/css/bootstrap-multiselect.min.css" rel="stylesheet" />
    <script src="~/lib/bootstrap-multiselect-master/dist/js/bootstrap-multiselect.min.js"></script>
}