@model List<GCTL.Core.ViewModels.HrmDefExamGroupInfos.HrmDefExamGroupInfosSetupViewModel>

<table id="HrmDefExamGroupInfos-grid" class="table table-striped  table-bordered table-sm table-hover table-common">

        <thead class="row-border">
            <tr class="table row-border">
                <th class="text-center text-middle">
                    Select <br /> <input type="checkbox" id="HrmDefExamGroupInfos-check-all" />
                </th>
                <th class="text-center text-middle"> Id</th>
                <th class="text-center text-middle"> Group Name</th>
                <th class="text-center text-middle">Short Name</th>

            </tr>
        </thead>
        <tbody>

            @if (Model == null || !Model.Any())
            {
                <tr class="text-center text-middle">
                    <td colspan="8">No  HRM Exam Group Available.</td>
                </tr>
            }
            else
            {
                @foreach (var item in Model.OrderByDescending(x => x.GroupCode))
                {
                    <tr>
                        <td class="text-center">
                            <input type="checkbox" class="text-center text-middle checkBox" data-id="@item.GroupCode" value="@item.GroupCode" />
                        </td>
                        <td>
                            <a href="#" class='btn js-HrmDefExamGroupInfos-edit'
                               style="text-decoration: underline; color: rebeccapurple;"
                               data-id="@item.GroupCode" title="Edit">
                                @item.GroupCode
                            </a>
                        </td>

                        <td class="text-center text-middle">@item.GroupName</td>
                        <td class="text-center text-middle">@item.ShortName</td>


                    </tr>
                }
            }


        </tbody>
</table>
