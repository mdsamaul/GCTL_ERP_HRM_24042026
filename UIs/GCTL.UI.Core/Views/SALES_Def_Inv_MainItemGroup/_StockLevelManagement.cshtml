@model GCTL.UI.Core.ViewModels.SalesDefInvMainItem.SalesDefInvMainItemDto
<div class="card mx-3 mb-2">
    <input type="hidden" asp-for="StockLevelManagement.TC" class="form-control form-control-sm" value="0">
    <div class="d-flex align-items-center container-fluid mx-auto " style="padding-left: 0px;">      
        <!-- Main Group Id -->
        <div style="width: 33.33vw;">
            <div class="input-group d-flex jusify-content-center align-items-center">
                <div style="width: 40%;" class="p-0 text-right" id="basic-addon1">SLM Id<span class="text-danger px-1">*</span></div>
                <div style="width: 60%;" class="p-0">
                    <input type="text" asp-for="StockLevelManagement.SLMID" class="form-control form-control-sm" placeholder="Enter Main Item ID" aria-label="MainItemID">
                </div>
            </div>
        </div>

        <!-- Name -->
        <div style="width: 33.33vw;">
            <div class="input-group d-flex jusify-content-center align-items-center">
                <div style="width: 40%;" class="p-0 text-right" id="basic-addon2">Item<span class="text-danger px-1">*</span></div>
                <div style="width: 60%;" class="p-0">
                    <select asp-for="StockLevelManagement.ItemID" class="form-select form-select-sm searchable-select" asp-items="ViewBag.ItemList as SelectList">
                        <option value="">--Select Product--</option>
                    </select>
                </div>
            </div>
        </div>

        <!-- Description -->
        <div style="width: 33.33vw;">
            <div class="form-floating d-flex justify-content-end align-items-center">
                <div style="width: 40%;" class="text-right p-0">
                    <label for="floatingTextarea">Warehouse<span class="text-danger px-1">*</span></label>
                </div>
                <div style="width: 60%; padding: 5px;" class="pl-2 pl-lg-3">
                    <select asp-for="StockLevelManagement.WarehouseID" class="form-select form-select-sm searchable-select" asp-items="ViewBag.WareHouseList as SelectList">
                        <option value="">--Select Warehouse--</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
    <div class="d-flex align-items-center container-fluid mx-auto " style="padding-left: 0px;">
        <!-- Main Group Id -->
        <div style="width: 33.33vw;">
            <div class="input-group d-flex jusify-content-center align-items-center">
                <div style="width: 40%;" class="p-0 text-right" id="basic-addon1">In Stock(Quantity)<span class="text-danger px-1">*</span></div>
                <div style="width: 60%;" class="p-0">
                    <input type="number" asp-for="StockLevelManagement.InStock" class="form-control form-control-sm" placeholder="Input In Stock(Quantity)" aria-label="MainItemID">
                </div>
            </div>
        </div>

        <!-- Name -->
        <div style="width: 33.33vw;">
            <div class="input-group d-flex jusify-content-center align-items-center">
                <div style="width: 40%;" class="p-0 text-right" id="basic-addon2">Stock Value<span class="text-danger px-1">*</span></div>
                <div style="width: 60%;" class="p-0">
                    <input type="number" asp-for="StockLevelManagement.StockValue" class="form-control form-control-sm" placeholder="input Stock Value" aria-label="MainItemName">
                </div>
            </div>
        </div>

        <!-- Description -->
        <div style="width: 33.33vw;">
            <div class="form-floating d-flex justify-content-end align-items-center">
                <div style="width: 40%;" class="text-right p-0">
                    <label for="floatingTextarea" style="white-space: nowrap;">Reorder Level(Quantity)</label>
                </div>
                <div style="width: 60%; padding: 5px;" class="pl-2 pl-lg-3">
                    <input type="number" asp-for="StockLevelManagement.ReorderLevel" class="form-control form-control-sm" placeholder="Reorder Level(Quantity)" >
                </div>
            </div>
        </div>
    </div>
    <div class="d-flex align-items-center container-fluid mx-auto " style="padding-left: 0px;">
        <!-- Main Group Id -->
        <div style="width: 33.33vw;">
            <div class="input-group d-flex jusify-content-center align-items-center">
                <div style="width: 40%;" class="p-0 text-right" id="basic-addon1">Max Stock(Quantity)</div>
                <div style="width: 60%;" class="p-0">
                    <input type="number" asp-for="StockLevelManagement.MaxStock" class="form-control form-control-sm" placeholder="Input Max Stock(Quantity)" aria-label="MainItemID">
                </div>
            </div>
        </div>

        <!-- Name -->
        <div style="width: 33.33vw;">
            <div class="input-group d-flex jusify-content-center align-items-center">
                <div style="width: 40%;" class="p-0 text-right" id="basic-addon2">Min Stock(Quantity)</div>
                <div style="width: 60%;" class="p-0">
                    <input type="number" asp-for="StockLevelManagement.MinStock" class="form-control form-control-sm" placeholder="Input Min Stock(Quantity)" aria-label="MainItemName">
                </div>
            </div>
        </div>

        <!-- Description -->
        <div style="width: 33.33vw;">
            <div class="form-floating d-flex justify-content-end align-items-center">
                <div style="width: 40%;" class="text-right p-0">
                    <label for="floatingTextarea">Description</label>
                </div>
                <div style="width: 60%; padding: 5px;" class="pl-2 pl-lg-3">
                    <textarea asp-for="StockLevelManagement.Description" class="form-control form-control-sm" placeholder="Input Description" rows="1" ></textarea>
                </div>
            </div>
        </div>
    </div>
    <partial name="_ShowingDate"></partial>
</div>
<div class="card mx-3 mb-2">
    <partial name="_GridStockLevelManagement"></partial>
</div>