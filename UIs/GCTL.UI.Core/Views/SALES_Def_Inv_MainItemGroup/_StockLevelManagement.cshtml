@model GCTL.UI.Core.ViewModels.SalesDefInvMainItem.SalesDefInvMainItemDto
<div class="card mx-3 mb-2  py-2">
   
    <div class="mx-0 mt-1 w-100">
        <div class="d-flex align-items-center container-fluid mx-auto g-3" style="padding-left: 0px;">
            <input type="hidden" asp-for="StockLevelManagement.TC" class="form-control form-control-sm" value="0">
            <!-- Origin -->
            <div style="width: 33.33vw;">
                <div class="gap-1 d-flex jusify-content-center align-items-center input-group-container">
                    <div class="p-0 text-right input-group-container-label">SLM Id<span class="text-danger ">*</span></div>
                    <div class="p-0 input-group-container-input">
                        <input type="text" readonly asp-for="StockLevelManagement.SLMID" class="form-control form-control-sm" placeholder="Enter Main Item ID" aria-label="MainItemID">
                    </div>
                </div>
            </div>

            <!-- Manufacture Country -->
            <div style="width: 33.33vw;">
                <div class="gap-1 d-flex jusify-content-center align-items-center input-group-container">
                    <div class="p-0 text-right input-group-container-label">Item<span class="text-danger ">*</span></div>
                    <div class="p-0 input-group-container-input">
                        <select asp-for="StockLevelManagement.ItemID" class="form-select form-select-sm searchable-select" asp-items="ViewBag.ItemList as SelectList">
                            <option value="">--Select Product--</option>
                        </select>
                    </div>
                </div>
            </div>

            <!-- Package Type -->
            <div style="width: 33.33vw;">
                <div class="d-flex jusify-content-center align-items-center gap-1 input-group-container">
                    <div class="p-0 text-right input-group-container-label">Warehouse<span class="text-danger ">*</span></div>
                    <div class="p-0 input-group-container-input">
                        <select asp-for="StockLevelManagement.WarehouseID" class="form-select form-select-sm searchable-select" asp-items="ViewBag.WareHouseList as SelectList">
                            <option value="">--Select Warehouse--</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="mx-0 mt-1 w-100">
        <div class="d-flex align-items-center container-fluid mx-auto g-3" style="padding-left: 0px;">
            <!-- Origin -->
            <div style="width: 33.33vw;">
                <div class="gap-1 d-flex jusify-content-center align-items-center input-group-container">
                    <div class="p-0 text-right input-group-container-label">In Stock(Quantity)<span class="text-danger ">*</span></div>
                    <div class="p-0 input-group-container-input">
                        <input type="number" asp-for="StockLevelManagement.InStock" class="form-control form-control-sm" placeholder="Input In Stock(Quantity)" aria-label="MainItemID">
                    </div>
                </div>
            </div>

            <!-- Manufacture Country -->
            <div style="width: 33.33vw;">
                <div class="gap-1 d-flex jusify-content-center align-items-center input-group-container">
                    <div class="p-0 text-right input-group-container-label">Stock Value<span class="text-danger ">*</span></div>
                    <div class="p-0 input-group-container-input">
                        <input type="number" asp-for="StockLevelManagement.StockValue" class="form-control form-control-sm" placeholder="input Stock Value" aria-label="MainItemName">
                    </div>
                </div>
            </div>

            <!-- Package Type -->
            <div style="width: 33.33vw;">
                <div class="d-flex jusify-content-center align-items-center gap-1 input-group-container">
                    <div class="p-0 text-right input-group-container-label">Warehouse<span class="text-danger ">*</span></div>
                    <div class="p-0 input-group-container-input">
                        <input type="number" asp-for="StockLevelManagement.ReorderLevel" class="form-control form-control-sm" placeholder="Reorder Level(Quantity)">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="mx-0 mt-1 w-100">
        <div class="d-flex align-items-center container-fluid mx-auto g-3" style="padding-left: 0px;">
            <!-- Origin -->
            <div style="width: 33.33vw;">
                <div class="gap-1 d-flex jusify-content-center align-items-center input-group-container">
                    <div class="p-0 text-right input-group-container-label">Max Stock(Quantity)</div>
                    <div class="p-0 input-group-container-input">
                        <input type="number" asp-for="StockLevelManagement.MaxStock" class="form-control form-control-sm" placeholder="Input Max Stock(Quantity)" aria-label="MainItemID">
                    </div>
                </div>
            </div>

            <!-- Manufacture Country -->
            <div style="width: 33.33vw;">
                <div class="gap-1 d-flex jusify-content-center align-items-center input-group-container">
                    <div class="p-0 text-right input-group-container-label">Min Stock(Quantity)</div>
                    <div class="p-0 input-group-container-input">
                        <input type="number" asp-for="StockLevelManagement.MinStock" class="form-control form-control-sm" placeholder="Input Min Stock(Quantity)" aria-label="MainItemName">
                    </div>
                </div>
            </div>

            <!-- Package Type -->
            <div style="width: 33.33vw;">
                <div class="d-flex jusify-content-center align-items-center gap-1 input-group-container">
                    <div class="p-0 text-right input-group-container-label">Description</div>
                    <div class="p-0 input-group-container-input">
                        <textarea asp-for="StockLevelManagement.Description" class="form-control form-control-sm" placeholder="Input Description" rows="1"></textarea>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <partial name="_ShowingDate"></partial>
</div>
<div class="card mx-3 mb-2 py-2">
    <partial name="_GridStockLevelManagement"></partial>
</div>