@model List<GCTL.Core.ViewModels.Districts.DistrictsSetupViewModel>

<table id="District-grid" class="table table-striped  table-bordered table-sm table-hover table-common">

    <thead class="row-border">
        <tr class="table row-border">
            <th class="text-center text-middle" style="width:15%;">
                Select <br /> <input type="checkbox" id="District-check-all" />
            </th>
            <th class="text-center text-middle" style="width: 20%;">DistrictId</th>
            <th class="text-center text-middle" style="width: 65%;"> District</th>
        </tr>
    </thead>
    <tbody>

        @if (Model == null || !Model.Any())
        {
            <tr class="text-center text-middle">
                <td colspan="8">No District Available.</td>
            </tr>
        }
        else
        {
            @foreach (var item in Model.OrderByDescending(x => x.DistrictId))
            {
                <tr>
                    <td class="text-center">
                        <input type="checkbox" class="text-center text-middle checkBox" data-id="@item.DistrictId" value="@item.DistrictId" />
                    </td>
                    <td>
                        <a href="#" class='btn js-District-edit'
                           style="text-decoration: underline; color: rebeccapurple;"
                           data-id="@item.DistrictId" title="Edit">
                            @item.DistrictId
                        </a>
                    </td>
                    <td class="text-center text-middle">@item.District</td>
                </tr>
            }
        }


    </tbody>
</table>


