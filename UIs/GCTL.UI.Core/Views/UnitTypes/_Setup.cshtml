@model GCTL.Core.ViewModels.UnitTypes.UnitTypeSetupViewModel

<div style="padding-top: 10px;">
    <div class="row">
        <div class="col-lg-6">
            <span id="message"></span>
        </div>
        <div class="col-lg-6">
        </div>
    </div>
    <div class="form-group row">
        <input type="hidden" asp-for="Tc" />
        <input type="hidden" asp-for="Ldate" />
        <input type="hidden" asp-for="ModifyDate" />
        <div class="col-lg-6">
            <label asp-for="UnitTypId">Unit Type Id</label>
            <div class="input-group input-group-sm">
                <input asp-for="UnitTypId" class="form-control form-control-sm js-code" readonly="readonly" />
            </div>
        </div>        
    </div>
    <div class="form-group row">
        <div class="col-lg-6">
            <label asp-for="UnitTypeName">Unit Type</label>
            <span class="text-danger">*</span>
            <input asp-for="UnitTypeName" class="form-control form-control-sm js-unittype-check-availability" placholder="Enter Unit Type" />
            <span asp-validation-for="UnitTypeName" class="text-danger" />
        </div>
        <div class="col-lg-6">
            <label asp-for="ShortName">Short Name</label>
            <input asp-for="ShortName" class="form-control form-control-sm" placholder="Enter Short Name" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-lg-6">
            <label asp-for="DecimalPlaces">Decimal Places (0-5)</label>
            <div class="input-group">
                <input asp-for="DecimalPlaces" class="form-control form-control-sm js-unittype-decimalplaces" placholder="Enter Decimal Places" />
                <div class="input-group-prepend input-group-prepend-sm">
                    <span class="input-group-text"></span>
                </div>
            </div>
        </div>
    </div>
    @if (Model.Tc > 0)
    {
        <hr />
        <div class="form-group row">
            <div class="col-lg-6">
                @if (Model.Ldate.HasValue)
                {
                    <label>Creation Date: </label>
                    <label>@Model.Ldate.Value.ToString(ApplicationConstants.DateFormat)</label>
                }
            </div>
            <div class="col-lg-6">
                @if (Model.ModifyDate.HasValue)
                {
                    <label>Last Update Date: </label>
                    <label>@Model.ModifyDate.Value.ToString(ApplicationConstants.DateFormat)</label>
                }
            </div>
        </div>
    }
</div>
<div class="row no-print" style="margin-top: 9px;">
    <div class="col-12">
        <button class="btn btn-default success-btn btn-common btn-circle float-right js-unittype-save" type="button">
            <i class="fas fa-save">&nbsp;</i> Save
        </button>
    </div>
</div>