@model List<GCTL.Core.ViewModels.Nationalitys.NationalitysSetupViewModel>

<table id="Nationalitys-grid" class="table table-striped  table-bordered table-sm table-hover table-common">
    <thead class="row-border">
        <tr class="table row-border">
            <th class="text-center text-middle" style="width: 10%;">
                Select <br /> <input type="checkbox" id="Nationalitys-check-all" />
            </th>
            <th class="text-center text-middle" style="width: 10%;"> Id</th>
            <th class="text-center text-middle" style="width: 80%;"> Nationality</th>

        </tr>
    </thead>
    <tbody>

        @if (Model == null || !Model.Any())
        {
            <tr class="text-center text-middle">
                <td colspan="8">No Data Available.</td>
            </tr>
        }
        else
        {
            @foreach (var item in Model.OrderByDescending(x => x.NationalityCode))
            {
                <tr>
                    <td class="text-center">
                        <input type="checkbox" class="text-center text-middle checkBox" data-id="@item.NationalityCode" value="@item.NationalityCode" />
                    </td>
                    <td>
                        <a href="#" class='btn js-Nationalitys-edit'
                           style="text-decoration: underline; color: rebeccapurple;"
                           data-id="@item.NationalityCode" title="Edit">
                            @item.NationalityCode
                        </a>
                    </td>

                    <td class="text-center text-middle">@item.Nationality</td>


                </tr>
            }
        }


    </tbody>
</table>
