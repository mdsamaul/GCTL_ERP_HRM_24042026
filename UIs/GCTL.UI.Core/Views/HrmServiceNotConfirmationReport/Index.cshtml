<style>
    .multiselect-option input[type="radio"] {
        display: none !important;
    }

    #downloadBtn:hover,
    #previewBtn:hover {
        background-color: #ffffe6 !important; /* Light green color */
        border-color: #28a745 !important; /* Light green border */
        color: green !important; /* Change text color to white for better contrast */
    }
</style>


<section>
    <div class="container-fluid">
        <div class="row px-2 pr-3">
            <div class="col-md-12 pr-0">
                <div class="w-100 headerToobar">
                    <partial name="_Toolbars" model="new ToobarModel() { Title = Model.Breadcrumb, Code = Model.Code, }"></partial>
                </div>
            </div>
        </div>
        <div class="card col-md-11 col-12 mx-auto border" style="border-radius: 7px;">
            <div class="card-body rounded-md" style="padding: 1rem;">
                <!-- Search By Section -->
                <div class="row">
                    <div class="col-6">
                        <h6 class="font-weight-bold fs-6 mb-2">Search By:</h6>
                        <hr class="mt-0 mb-3">
                    </div>
                </div>

                <div class="row">
                    <!-- Left Column -->
                    <div class="col-md-6">
                        <!-- Company -->
                        <div class="row align-items-center mb-3">
                            <label class="col-5 text-right mb-0 pr-3">Company</label>
                            <div class="col-6">
                                <select id="companySelect" class="form-control form-control-sm" autofocus>
                                    <!-- Options will be populated -->
                                </select>
                            </div><div class="col-1"></div>
                        </div>

                        <!-- Department -->
                        <div class="row align-items-center mb-3">
                            <label class="col-5 text-right mb-0 pr-3">Department</label>
                            <div class="col-6">
                                <select id="departmentSelect" class="form-control form-control-sm" multiple>
                                    <!-- Options will be populated -->
                                </select>
                            </div><div class="col-1"></div>
                        </div>

                        <!-- Employee -->
                        <div class="row align-items-center mb-3">
                            <label class="col-5 text-right mb-0 pr-3">Employee</label>
                            <div class="col-6">
                                <select id="employeeSelect" class="form-control form-control-sm" multiple>
                                    <!-- Options will be populated -->
                                </select>
                            </div><div class="col-1"></div>
                        </div>

                    </div>

                    <!-- Right Column -->
                    <div class="col-md-6">
                        <!-- Branch -->
                        <div class="row align-items-center mb-3">
                            <label class="col-5 text-right mb-0 pr-3">Branch</label>
                            <div class="col-6">
                                <select id="branchSelect" class="form-control form-control-sm" multiple>
                                    <!-- Options will be populated -->
                                </select>
                            </div>
                            <div class="col-1"></div>
                        </div>

                        <!-- Designation -->
                        <div class="row align-items-center mb-3">
                            <label class="col-5 text-right mb-0 pr-3">Designation</label>
                            <div class="col-6">
                                <select id="designationSelect" class="form-control form-control-sm" multiple>
                                    <!-- Options will be populated -->
                                </select>
                            </div>
                            <div class="col-1"></div>
                        </div>

                        
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <!--Joining Date -->
                        <div class="row align-items-center mb-3">
                            <label class="col-5 text-right mb-0 pr-3">Joining Date From</label>
                            <div class="col-6">
                                <input type="text" id="joiningDateFromSelect" class="form-control form-control-sm" />
                            </div><div class="col-1"></div>
                        </div>

                        <!--Effective Date -->
                        <div class="row align-items-center mb-3">
                            <label class="col-5 text-right mb-0 pr-3">Effective Date From</label>
                            <div class="col-6">
                                <input type="text" id="effectiveDateFromSelect" class="form-control form-control-sm" />
                            </div><div class="col-1"></div>
                        </div>

                        <!--Effective Date -->
                        <div class="row align-items-center mb-3">
                            <label class="col-5 text-right mb-0 pr-3">Due Payment Date From</label>
                            <div class="col-6">
                                <input type="text" id="duePaymentDateFromSelect" class="form-control form-control-sm" />
                            </div><div class="col-1"></div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <!--Joining Date To-->
                        <div class="row align-items-center mb-3">
                            <label class="col-5 text-right mb-0 pr-3">To</label>
                            <div class="col-6">
                                <input type="text" id="joiningDateToSelect" class="form-control form-control-sm" />
                            </div><div class="col-1"></div>
                        </div>

                        <!--Effective Date To-->
                        <div class="row align-items-center mb-3">
                            <label class="col-5 text-right mb-0 pr-3">To</label>
                            <div class="col-6">
                                <input type="text" id="effectiveDateToSelect" class="form-control form-control-sm" />
                            </div><div class="col-1"></div>
                        </div>

                        <!--Effective Date To-->
                        <div class="row align-items-center mb-3">
                            <label class="col-5 text-right mb-0 pr-3">To</label>
                            <div class="col-6">
                                <input type="text" id="duePaymentDateToSelect" class="form-control form-control-sm" />
                            </div><div class="col-1"></div>
                        </div>
                    </div>
                </div>
                <!-- Report Option Section -->
                <div class="row mt-4">
                    <div class="col-6">
                        <h6 class="font-weight-bold fs-6 mb-2">Report Option:</h6>
                        <hr class="mt-0 mb-3">
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <!-- Export Report Format -->
                        <div class="row align-items-center mb-3">
                            <label class="col-5 text-right mb-0 pr-3">Export Report Format</label>
                            <div class="col-6">
                                <select id="exportFormatSelect" class="form-control form-control-sm">
                                    <option value="pdf">PDF</option>
                                    <option value="word">Word Document</option>
                                    <option value="excel">Excel Spreadsheet</option>
                                    <option value="download">Direct Download</option>
                                </select>
                            </div><div class="col-1"></div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <!-- Action Buttons -->
                        <div class="row">
                            <div class="col-11 d-flex justify-content-end">
                                <button type="button" class="col-md-3 btn btn-default success-btn btn-sm mr-2" id="downloadBtn">
                                    <i class="fas fa-file-export"></i> Export
                                </button>
                                <button type="button" class="col-md-3 btn btn-default success-btn btn-sm" id="previewBtn">
                                    <i class="fas fa-eye"></i> Preview
                                </button>
                            </div><div class="col-1"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="mt-4">
        <partial name="_ServiceNotConfirmReportPreview" />
    </div>
</section>

