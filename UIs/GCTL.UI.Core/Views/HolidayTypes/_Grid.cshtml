@model List<GCTL.Core.ViewModels.HolidayTypes.HRMDefHolidayTypeSetupViewModel>

<table id="HolidayTypes-grid" class="table table-striped  table-bordered table-sm table-hover table-common">
        <thead class="row-border">
            <tr class="table row-border">
                <th class="text-center text-middle">
                    Select <br /> <input type="checkbox" id="HolidayTypes-check-all" />
                </th>
                <th class="text-center text-middle">Holiday Type Id</th>
                <th class="text-center text-middle"> Holiday Type</th>
                <th class="text-center text-middle">Short Name</th>
                
            </tr>
        </thead>
        <tbody>

            @if (Model == null || !Model.Any())
            {
                <tr class="text-center text-middle">
                    <td colspan="8">No  HRM Holiday Type Available.</td>
                </tr>
            }
            else
            {
                @foreach (var item in Model.OrderByDescending(x => x.HolidayTypeCode))
                {
                    <tr>
                        <td class="text-center">
                            <input type="checkbox" class="text-center text-middle checkBox" data-id="@item.HolidayTypeCode" value="@item.HolidayTypeCode" />
                        </td>
                        <td class="text-center text-middle">
                            <a href="#" class='btn js-HolidayTypes-edit' style="text-decoration: underline; color: rebeccapurple;" 
                                data-id="@item.HolidayTypeCode" title="Edit">
                                @item.HolidayTypeCode
                            </a>
                        </td>

                        <td class="text-center text-middle">@item.HolidayType</td>
                        <td class="text-center text-middle">@item.ShortName</td>
                      
                       
                    </tr>
                }
            }


        </tbody>
 </table>
