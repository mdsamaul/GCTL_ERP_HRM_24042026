 @model GCTL.UI.Core.ViewModels.HrmPaySalaryDeductions.HrmPaySalaryDeductionViewModel 

@{
    ViewBag.Title = "Employee Holiday Declaration";
    Model.Breadcrumb = "EmployeeHolidayDeclaration";
    Model.PageTitle = ViewBag.Title;
}

<style>
    .card-header {
        min-height: 50px;
    }

    #employee-filter-grid tbody tr td:first-child {
        width: 5% ;
        padding: 0; 
    }
    #employee-filter-grid thead th:first-child {
        width: 5%;
    }

    th.no-sort::after,
    th.no-sort::before {
        display: none !important;
    }

/* 
    .modal-dialog {
        max-width: 60% !important;
        width: 50% !important;
    } */
</style>


<partial name="_PageHeader" model="Model"></partial>
<section class="content-fluid">
    <div class="container-fluid">
        <div class="row">
                
            <div class="col-md-12">
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header bg-white py-3">
                        <partial name="_Toolbars" model="new ToobarModel() { Title = Model.Breadcrumb, Code = Model.Code, Name = Model.Setup.Id }"></partial>
                    </div>

                 

                        <div class="col-md-12">
                            <partial name="_Grid" />
                        </div>

                        <hr class="my-4" />
					<div class="card-body">
                        <div id="salaryDeductionForm">
                            <partial name="_Setup"></partial>
                        </div>

                        <div>
                            <partial name="_ExcelFileUpload"></partial>
                        </div>

                        <div>
                            <partial name="_SalaryDeductionGrid"></partial>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="modal fade" id="deductionTypeModal" tabindex="-1" role="dialog" aria-labelledby="deductionTypeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deductionTypeModalLabel">Deduction Type</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="deductionTypeContent"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

