        height: 1.5vw;
        font-size: 0.7vw;
        line-height: 1;
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-shrink: 0;
        min-width: 20px;
        min-height: 20px;
    }




    .action-buttons {
        display: flex;
        gap: 0.3vw;
        justify-content: center;
        align-items: center;
    }

    .action-btn {
        width: 2.5vw;
        height: 2.5vw;
        font-size: 0.7vw;
        line-height: 1;
        display: flex;
        justify-content: center;
        align-items: center;
        min-width: 30px;
        min-height: 30px;
