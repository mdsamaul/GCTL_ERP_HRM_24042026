<style>
    .custom-fieldset {
        position: relative;
        border: 2px solid #ddd;
        border-radius: 10px;
        padding: 30px 20px 20px 20px;
        margin: 20px 0;
        box-shadow: 0 0 10px rgba(76, 175, 80, 0.2);
    }

        .custom-fieldset legend {
            position: absolute;
            top: -14px;
            left: 20px;
            background-color: white;
            padding: 0 10px;
            font-size: 1.2em;
            font-weight: bold;
            color: #727272;
            border: 1px solid #ddd;
            border-radius: 5px;
            width: auto;
        }

        .custom-fieldset label {
            display: block;
            margin-top: 10px;
            font-weight: 500;
            color: #333;
        }

        .custom-fieldset input[type="text"],
        .custom-fieldset input[type="email"],
        .custom-fieldset input[type="date"] {
            width: 100%;
            padding: 8px;
            margin-top: 5px;
            border: 1px solid #ddd;
            border-radius: 5px;
            box-sizing: border-box;
            color: #000;
        }

        .custom-fieldset input[type="submit"] {
            margin-top: 15px;
            padding: 10px 20px;
            background-color: #fff;
            border: 2px solid #333;
            border-radius: 5px;
            color: white;
            font-weight: bold;
            cursor: pointer;
        }

            .custom-fieldset input[type="submit"]:hover {
                background-color: #45a049;
                border-color: #45a049;
            }

    #stickyHeader {
        position: sticky;
        top: 0;
        z-index: 1050;
        background: white;
        padding: 10px 20px;
        transition: all 0.3s ease-in-out;
        box-shadow: none;
    }

        #stickyHeader.scrolled {
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
        }


    input[type="text"],
    input[type="email"],
    input[type="date"],
    input[type="number"],
    input[type="password"],
    select,
    textarea {
        border: 1px solid #ccc !important;
        border-radius: 4px;
        padding: 6px 10px;
        box-sizing: border-box;
        outline: none;
    }

        input:focus,
        select:focus,
        textarea:focus {
            border-color: #999 !important;
            box-shadow: none;
        }



    .flatpickr-calendar.inline {
        font-size: 12px !important;
        max-width: 9.9vw !important;
        border: none !important;
        padding: 0 !important;
        margin: 0 !important;
        box-shadow: none !important;
        background: transparent !important;
    }
    /* Time container */
    .flatpickr-time {
        height: 30px !important;
        border-radius: 0.375rem !important;
        overflow: hidden;
        border: 1px solid #ccc;
        padding: 0 !important;
        margin: 0 !important;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .flatpickr-monthDropdown-months {
        border: none !important;
    }

    .numInputWrapper .cur-year {
        border: none !important;
    }
    /* Input wrapper */
    .numInputWrapper {
        position: relative;
        width: 26px;
        height: 24px !important;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* Time input fields */
    .flatpickr-time .numInput {
        width: 100%;
        height: 100%;
        font-size: 12px !important;
        padding-right: 12px;
        box-sizing: border-box;
        text-align: center;
        border: none !important;
        background: transparent !important;
        padding: 0 !important;
        margin: 0 1px !important;
    }

    /* AM/PM toggle */
    .flatpickr-am-pm {
        font-size: 11px !important;
        height: 24px !important;
        line-height: 24px !important;
        padding: 0 4px;
        margin-left: 4px;
        background: transparent !important;
        border: none !important;
        border-left: none #ccc;
        cursor: pointer;
        border-radius: 0 !important;
    }

    /* Arrow buttons */
    .numInputWrapper .arrowUp,
    .numInputWrapper .arrowDown {
        right: 0;
        width: 8px;
        height: 50%;
        cursor: pointer;
        background: transparent;
    }

    .numInputWrapper .arrowUp {
        top: 0;
        border-bottom: none !important;
    }

    .numInputWrapper .arrowDown {
        bottom: 0;
        border-top: none !important;
    }

        .numInputWrapper .arrowUp:hover,
        .numInputWrapper .arrowDown:hover {
            border: none !important;
            background: #fff !important;
        }

    .flatpickr-time-separator {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 24px;
        font-size: 14px;
        margin: 0 2px;
        line-height: 1;
    }

    .timePickerContainer {
        padding-bottom: 0% !important;
    }

    @@media (max-width: 1400px) {
        .flatpickr-calendar.inline {
            max-width: 8.5vw !important;
        }

        .flatpickr-am-pm {
            padding-left: 0px !important;
            margin-left: 0px !important;
            padding-right: 0px !important;
        }

        .timePickerContainer {
            padding-bottom: 0% !important;
        }

        .customDateField {
            padding-top: 0px !important;
            padding-bottom: 0px !important;
            padding-left: 0px !important;
            padding-right: 0px !important;
        }
