@model GCTL.Core.ViewModels.Qualifications.QualificationSetupViewModel

<div style="padding-top: 10px;">
    <div class="row">
        <div class="col-lg-6">
            <span id="message"></span>
        </div>
        <div class="col-lg-6">
        </div>
    </div>
    <div class="form-group row">
        <input type="hidden" id="lastCode" />
        <input type="hidden" asp-for="AutoId" />
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Ldate" />
        <input type="hidden" asp-for="ModifyDate" />
        <div class="col-lg-6">
            <label asp-for="QualificationCode">Qualification Id</label>
            <div class="input-group input-group-sm">
                <input asp-for="QualificationCode" class="form-control form-control-sm js-qualification-code" readonly="readonly" />
            </div>
        </div>        
    </div>
    <div class="form-group row">
        <div class="col-lg-6">
            <label asp-for="QualificationName">Qualification</label>
            <span class="text-danger">*</span>
            <input asp-for="QualificationName" class="form-control form-control-sm js-qualification-check-availability" placeholder="Enter Qualification" />
            <span asp-validation-for="QualificationName" class="text-danger" />
        </div>
        <div class="col-lg-6">
            <label asp-for="QualificationShortName">Short Name</label>
            <input asp-for="QualificationShortName" class="form-control form-control-sm" placeholder="Enter Short Name" />
        </div>
    </div>

             <div class="form-group row">
        <div class="col-lg-6">
            <label asp-for="BanglaQualification">Qualification (বাংলা) </label>
            <span class="text-danger"></span>
            <input asp-for="BanglaQualification" class="form-control form-control-sm"  />        
        </div>
        <div class="col-lg-6">

        </div>
    </div>

    @if (Model.Id > 0)
    {
            <hr />
            <div class="form-group row">
                <div class="col-lg-6">
                @if (Model.Ldate.HasValue)
                {
                            <label>Creation Date: </label>
                            <label>@Model.Ldate.Value.ToString(ApplicationConstants.DateFormat)</label>
                }
                </div>
                <div class="col-lg-6">
                @if (Model.ModifyDate.HasValue)
                {
                            <label>Last Update Date: </label>
                            <label>@Model.ModifyDate.Value.ToString(ApplicationConstants.DateFormat)</label>
                }
                </div>
            </div>
    }
</div>
<div class="row no-print" style="margin-top: 9px;">
    <div class="col-12">
        <button type="button" class="btn btn-default success-btn btn-common btn-circle float-right js-qualification-save" data-id="@Model.QualificationCode">
          <i class="fas fa-save"></i> Save
        </button>
    </div>
</div>
