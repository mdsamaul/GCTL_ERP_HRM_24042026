@{
    ViewBag.Title = "EmployeeSalaryInfoEntry";
    Model.Breadcrumb = "EmployeeSalaryInfoEntry";
    Model.PageTitle = "EmployeeSalaryInfoEntry";
}


<style>
    .card-header {
        min-height: 50px;
    }

    #employee-filter-grid tbody tr td:first-child {
        width: 5%;
        padding: 0;
    }

    #employee-filter-grid thead th:first-child {
        width: 5%;
    }

    th.no-sort::after,
    th.no-sort::before {
        display: none !important;
    }
</style>

<partial name="_PageHeader" model="Model"></partial>
<section class="content-fluid">
    <div class="container-fluid">
        <div class="row">

            <div class="col-md-12">
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header bg-white py-3">
                        <partial name="_Toolbars" model="new ToobarModel() { Title = Model.Breadcrumb, Code = Model.Code }"></partial>
                    </div>

                    <div class="col-12">
                        <partial name="_Setup"></partial>
                    </div>

                    <hr class="my-4" />
                    <div class="card-body">

                        <div>
                            <partial name="_ExcelFileUpload"></partial>
                        </div>

                        <div>
                            <partial name="_Grid"></partial>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <script src="~/js/pages/hrmEmpSalaryInfoEntry.js"></script>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

    <link href="~/lib/bootstrap-multiselect-master/dist/css/bootstrap-multiselect.min.css" rel="stylesheet" />
    <script src="~/lib/bootstrap-multiselect-master/dist/js/bootstrap-multiselect.min.js"></script>

}