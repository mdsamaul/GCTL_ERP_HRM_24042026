@model GCTL.UI.Core.ViewModels.PaymentModes.PaymentModePageViewModel
@{
    ViewBag.Title = "Payment Modes";
    Model.Breadcrumb = "Payment Mode";
    Model.PageTitle = ViewBag.Title;
}

<!-- Content Header (Page header) -->
<partial name="_PageHeader" model="Model" />

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-7 pr-0">
                <div class="card">
                    <div class="card-header px-2">
                        <partial name="_Toolbars" model="new ToobarModel() { Title = Model.Breadcrumb, Code = Model.Code, Name = Model.Setup.PaymentModeName }" />
                    </div>
                    <div class="card-body px-2">
                        <form asp-action="Setup" id="paymentmode-form">
                            <div class="js-paymentmode-form-container">
                                <partial name="_Setup" model="Model.Setup" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-5">
                <div class="card">
                    <div class="card-body p-2 pt-3">
                        <div class="js-paymentmode-grid-container">
                            <partial name="_Grid" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <partial name="_BottomNavigation" />
    </div>
</section>
<partial name="DeleteModal" />

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/pages/paymentModes.js"></script>
    <script type="text/javascript">
        var options = {
            baseUrl: '@Url.Action("", "PaymentModes")',
        };
        options.load = () => {
        };

        $.paymentModes(options);
    </script>
}



