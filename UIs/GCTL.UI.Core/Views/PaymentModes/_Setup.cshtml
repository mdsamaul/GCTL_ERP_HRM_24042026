@model GCTL.Core.ViewModels.PaymentModes.PaymentModeSetupViewModel

<div style="padding-top: 10px;">
    <div class="row">
        <div class="col-lg-6">
            <span id="message"></span>
        </div>
        <div class="col-lg-6">
        </div>
    </div>
    <div class="form-group row">
        <input type="hidden" asp-for="PaymentModeId" />
        <input type="hidden" asp-for="Ldate" />
        <input type="hidden" asp-for="ModifyDate" />
        <input type="hidden" asp-for="Lip" />
        <div class="col-lg-6">
            <label asp-for="PaymentModeId">Payment Mode Id</label>
            <div class="input-group input-group-sm">
                <input asp-for="PaymentModeId" class="form-control form-control-sm js-code" readonly="readonly" />
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-lg-6">
            <label asp-for="PaymentModeName">Payment Mode</label>
            <span class="text-danger">*</span>
            <input asp-for="PaymentModeName" class="form-control form-control-sm js-paymentmode-check-availability" placeholder="Enter Payment Mode" />
            <span asp-validation-for="PaymentModeName" class="text-danger" />
        </div>
        <div class="col-lg-6">
            <label asp-for="PaymentModeShortName">Short Name</label>
            <input asp-for="PaymentModeShortName" class="form-control form-control-sm" placeholder="Enter Short Name" />
        </div>
    </div>
    @if (!string.IsNullOrEmpty(Model.Lip))
    {
        <hr />
        <div class="form-group row">
            <div class="col-lg-6">
                @if (Model.Ldate.HasValue)
                {
                    <label>Creation Date: </label>
                    <label>@Model.Ldate.Value.ToString(ApplicationConstants.DateFormat)</label>
                }
            </div>
            <div class="col-lg-6">
                @if (Model.ModifyDate.HasValue)
                {
                    <label>Last Update Date: </label>
                    <label>@Model.ModifyDate.Value.ToString(ApplicationConstants.DateFormat)</label>
                }
            </div>
        </div>
    }
</div>
<div class="row no-print" style="margin-top: 9px;">
    <div class="col-12">
        <button type="button" class="btn btn-default success-btn btn-common btn-circle float-right js-paymentmode-save" data-id="@Model.PaymentModeId">
            <i class="fas fa-save"></i> Save
        </button>
    </div>
</div>
