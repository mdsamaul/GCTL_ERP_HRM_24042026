@{
    Model.Breadcrumb = "HrmEmployeePPAlertReport";
}

<style>
    .multiselect-option input[type="radio"] {
        display: none !important;
    }

    #downloadBtn:hover {
        background-color: #ffffe6 !important; 
        border-color: #28a745 !important;
        color: green !important;
    }

    .card-header {
        min-height: 50px;
    }

    #employee-filter-grid tbody tr td:first-child {
        width: 5%;
        padding: 0;
    }

    #employee-filter-grid thead th:first-child {
        width: 5%;
    }

    .single-row-form .row {
        flex-wrap: nowrap !important;
    }

    .single-row-form .col-equal {
        flex: 1;
        min-width: 0;
        max-width: none;
        display: flex;
        flex-direction: column;
    }

    .single-row-form .label-container {
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 0.5rem;
        padding: 0.25rem;
    }

    .single-row-form .form-label {
        margin: 0;
        font-size: 0.875rem;
        text-align: start;
        word-wrap: break-word;
        hyphens: auto;
    }

    .single-row-form .form-control,
    .single-row-form .form-select {
        flex: 1;
    }

    th.no-sort::after,
    th.no-sort::before {
        display: none !important;
    }

    table.dataTable thead > tr > th.sorting,
    table.dataTable thead > tr > th.sorting_asc,
    table.dataTable thead > tr > th.sorting_desc {
        padding-right: 4px;
        background-position: right center;
        background-repeat: no-repeat;
        background-size: 10px 10px;
    }

    .break-word {
        word-break: break-word;
        overflow-wrap: break-word;
    }
</style>

<partial name="_PageHeader" model="Model"></partial>
<section class="content-fluid">
    <div class="container-fluid">
        <div class="row">

            <div class="col-md-12">
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header bg-white py-3">
                        <partial name="_Toolbars" model="new ToobarModel() { Title = Model.Breadcrumb, Code = Model.Code }"></partial>
                    </div>

                    <div class="col-12">
                        <partial name="_PPAlertPreview"></partial>
                    </div>

                    <hr class="my-3" />
                    <div class="card-body p-0">
                        <partial name="_Grid"></partial>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.5.0/css/responsive.dataTables.min.css">
    <script src="~/frontend/plugins/datatables/jquery.datatables.min.js"></script>

    <link href="~/lib/bootstrap-multiselect-master/dist/css/bootstrap-multiselect.min.css" rel="stylesheet" />
    <script src="~/lib/bootstrap-multiselect-master/dist/js/bootstrap-multiselect.min.js"></script>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="~/js/pages/hrmEmpPPAlertReport.js"></script>
    <script type="text/javascript">
        $(function () {
            $.empPPAlertReport({
                baseUrl: '@Url.Action("Index", "HrmEmployeePPAlertReport")',
                load: function () {
                    console.log("Custom load logic called from Razor view");
                }
            });
        });
    </script> 
}