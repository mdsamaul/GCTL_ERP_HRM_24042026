@model GCTL.Core.ViewModels.HrmWorkingDayDeclarations.HrmWorkingDayDeclarationViewModel


<style>
    #workingday-declaration-form {
        max-width: 80%
    }

    .form-label {
        text-align: right;
    }

    .form-group-row {
        display: flex;
        align-items: center;
        gap: 5px;
        margin-bottom: 1rem;
    }

    .form-group-row label {
        min-width: 120px;
        white-space: nowrap;
        margin-bottom: 0;
    }
    
    .form-group-row .form-control,
    .form-group-row select {
        flex: 1;
        min-width: 0; /* Added to prevent overflow if content is too wide */
    }


</style>

<div class="card mb-4 border-0 shadow-sm">
    <div class="card-header bg-light">
        <h6 class="mb-0">
            <i class="fa fa-calendar-alt me-2 px-3"></i>
            Working Day Declaration Entry
        </h6>
    </div>
    <div class="card-body">
        <form id="workingday-declaration-form" class="mt-4">
            <input type="text" asp-for="Tc" hidden />
            <input type="text" asp-for="EmployeeId" hidden />
            <div class="row mb-3">
                <div class="col-md-2"></div>
                <div class="col-md-4">
                    <div class="form-group-row">
                        <label asp-for="WorkingDayDate" class="form-label">Working Day Date     <span class="text-danger">*</span></label>
                        <input type="text" asp-for="WorkingDayDate" class="form-control" tabindex="1"/>
                    </div>
                </div>
                <div class="col-md-2"></div>
                <div class="col-md-4">
                    <div class="form-group-row">
                        <label asp-for="Remarks" class="form-label">Remarks:</label>
                        <textarea asp-for="Remarks" class="form-control" rows="3" placeholder="Enter your remarks here" style="height:100px; resize:none;"  tabindex="2"></textarea>
                    </div>
                </div>
            </div>

		</form>
        <div class="row mb-3">
			<div class="col-md-10"></div>
			<div class="col-md-2 d-flex justify-content-center">
                <button type="button" class="btn btn-default success-btn rounded-pill pt-2 pb-2 js-workingday-declaration-dec-save" id="submitButton" tabindex="3">
                    <i class="fa fa-save">&nbsp;</i> Save
                </button>


			</div>
		</div>
    </div>
</div>