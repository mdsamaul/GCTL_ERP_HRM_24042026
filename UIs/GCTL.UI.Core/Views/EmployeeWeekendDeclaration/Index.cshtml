}
<style>
    .card-header {
        min-height: 50px; 
    }

    .sticky-scrolled {
        background-color: #fff !important;
        transition: background-color 0.3s ease-in-out;
        opacity: 95%;
    }

  
    .page-item.active .page-link {
        z-index: 3 !important;
        color: #000000 !important;
        background-color: #ffffff !important;
        border-color: #007bff !important;
    }
</style>
<!-- Content Header (Page header) -->
<partial name="_PageHeader" model="Model"></partial>
<section class="content consistent-look">
    <div class="container-fluid">
        <div class="row px-2 pr-3">
            <!-- Left Side: Form -->
            <div class="col-md-12 pr-0">
                <div class="card">
                  @*   <div class="card-header px-2" style="min-height: 50px;">
                        <partial name="_Toolbars" model="new ToobarModel() { Title = Model.Breadcrumb, Code = Model.Code, Name = Model.Setup.EWDId }"></partial>
                    </div> *@
                    <div id="stickyHeader" class="card-header px-2 sticky-top" style="min-height: 50px; z-index: 1020;">
                        <partial name="_Toolbars" model="new ToobarModel() { Title = Model.Breadcrumb, Code = Model.Code, Name = Model.Setup.EWDId }"></partial>
                    </div>
                   <div id="massageSeccess" class="alert-default-light  pt-2 " style="display: none; color: green; font-weight: bold; padding-left:20px; display: inline-block;">                       
                    </div>
                    <div id="massageError" class="alert-default-light  pt-2 " style="display: none; color: red; font-weight: bold; padding-left:20px; display: inline-block;">                       
                    </div>
                    <div id="massageUpdate" class="alert-default-light  pt-2 " style="display: none; color: blue; font-weight: bold; padding-left:20px; display: inline-block;">                       
                    </div>

                    <div class="card-body px-2" >
                        <div class="container-fluid py-2">
                            <div>
                                <h5>Filter By:</h5>
                            </div>
                            <div class="row d-flex flex-wrap justify-content-start text-center align-items-end pb-4">
                                <div class="col-auto">
                                    <label for="companySelect">Company</label>
                                    <select id="companySelect" class="form-control form-control-sm"></select>
                                </div>
                                <div class="col-auto">
                                    <label for="branchSelect">Branch</label>
                                    <select id="branchSelect" class="form-control form-control-sm" multiple="multiple"></select>
                                </div>
                                <div class="col-auto">
                                    <label for="divisionSelect">Division</label>
                                    <select id="divisionSelect" class="form-control form-control-sm" multiple="multiple"></select>
                                </div>
                                <div class="col-auto">
                                    <label for="departmentSelect">Department</label>
                                    <select id="departmentSelect" class="form-control form-control-sm" multiple="multiple"></select>
                                </div>
                                <div class="col-auto">
                                    <label for="designationSelect">Designation</label>
                                    <select id="designationSelect" class="form-control form-control-sm" multiple="multiple"></select>
                                </div>
                                <div class="col-auto">
                                    <label for="employeeSelect">Employee</label>
                                    <select id="employeeSelect" class="form-control form-control-sm" multiple="multiple"></select>
                                </div>
                                <div class="col-auto">
                                    <label for="activityStatusSelect">Activity Status</label><br />
                                    <select id="activityStatusSelect" class="form-control form-control-sm">
                                        <option value="Inactive" >Inactive</option>
                                        <option value="Active">Active</option>
                                    </select>
                                </div>
                            </div>
                            <!-- table: Grid -->
                            <div class="col-md-12 mt-2">
                                <partial name="_Grid" />
                            </div>
                            <div>
                                <partial name="_DatePeaker"></partial>
                            </div>
                            <div>
                                <partial name="_ExcelFileUploaded"></partial>
                            </div>
                            <div>
                                <partial name="_EmployeeWeekendDeclaration"></partial>
                            </div>
                        </div>
                    </div>
                   
                </div>
            </div>          
           
        </div>
    </div>
</section>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">


<!-- Optional: Theme -->
