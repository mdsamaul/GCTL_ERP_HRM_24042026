@model List<GCTL.Core.ViewModels.HrmDefInstitutes.HrmDefInstitutesSetupViewModel>

<table id="HrmDefInstitutes-grid" class="table table-striped  table-bordered table-sm table-hover table-common">

        <thead class="row-border">
            <tr class="table row-border">
                <th class="text-center text-middle">
                    Select <br /> <input type="checkbox" id="HrmDefInstitutes-check-all" />
                </th>
                <th class="text-center text-middle"> Id</th>
                <th class="text-center text-middle"> Institute Name</th>
                <th class="text-center text-middle">Short Name</th>

            </tr>
        </thead>
        <tbody>

            @if (Model == null || !Model.Any())
            {
                <tr class="text-center text-middle">
                    <td colspan="8">No  Data Available.</td>
                </tr>
            }
            else
            {
                @foreach (var item in Model.OrderByDescending(x => x.InstituteCode))
                {
                    <tr>
                        <td class="text-center">
                            <input type="checkbox" class="text-center text-middle checkBox" data-id="@item.InstituteCode" value="@item.InstituteCode" />
                        </td>
                        <td>
                            <a href="#" class='btn js-HrmDefInstitutes-edit'
                               style="text-decoration: underline; color: rebeccapurple;"
                               data-id="@item.InstituteCode" title="Edit">
                                @item.InstituteCode
                            </a>
                        </td>

                        <td class="text-center text-middle">@item.InstituteName</td>
                        <td class="text-center text-middle">@item.ShortName</td>

                    </tr>
                }
            }


        </tbody>
    </table>
